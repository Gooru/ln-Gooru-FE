<div class="controller class context-player player">
  {{#if collection.isAssessment}}
    {{player.gru-assessment-confirmator
      bidirectional=collection.bidirectional
      attempts=assessmentAttemptsLeft
      title=collection.title
      onStart='startAssessment'
      onCancel='closePlayer'
      isAssessmentStarted=isAssessmentStarted}}
  {{/if}}
  {{#if showContent}}
    {{partial 'partials/player'}}
  {{/if}}
</div>
