<section class="index">
  <div class="row hero">
    <div class="col-md-12">
      <h1>{{t "index.joinUs"}}</h1>
    </div>
  </div>
  <div class="row">
      <div class="browse_content col-md-10 col-sm-10 col-center-block">
              <div class="row title">
                  <div class="col-md-12 col-sm-12 bg-gray-light pa-md-6 pa-sm-6 text-center">
                      <h2 class="text-blue">{{t "index.browseContent.title"}}</h2>
                  </div>
              </div>

              <div class="row browse_content_dropdowns bg-white">
                  <ul class="pa-md-left-20 pa-sm-left-20">
                      <li class="lookingFor pa-md-top-20 pa-md-bottom-20 pa-sm-top-5 pa-sm-bottom-5">
                          <p class="text-blue">{{t "index.browseContent.description_1"}}</p>
                      </li>
                      <li class="grade pa-md-top-15 pa-md-bottom-15 pa-md-left-2 pa-md-right-2 pa-sm-top-5 pa-sm-bottom-5 pa-sm-left-2 pa-sm-right-2">
                        {{grade-dropdown
                        placeholder=(t "grade-dropdown.placeholder")
                        prompt=(t "grade-dropdown.prompt")
                        grades=grades
                        onChangeAction="onGradeSelected"}}
                      </li>
                      <li class="learningMaterials pa-md-top-20 pa-md-bottom-20 pa-sm-top-5 pa-sm-bottom-5">
                          <p class="text-blue">{{t "index.browseContent.description_2"}}</p>
                      </li>
                      <li class="subject pa-md-top-15 pa-md-bottom-15 pa-md-left-2 pa-md-right-2 pa-sm-top-5 pa-sm-bottom-5 pa-sm-left-2 pa-sm-right-2">
                        {{subject-dropdown
                        subjects=subjects
                        onChangeAction="onSubjectChange"}}
                      </li>
                      <li class="or pa-md-top-15 pa-md-bottom-15 pa-md-left-2 pa-md-right-2 pa-sm-top-5 pa-sm-bottom-5 pa-sm-left-2 pa-sm-right-2">
                          <a class="btn btn-primary btn-browseContent">{{t "index.browseContent.button"}}</a>
                      </li>
                      <li class="browseContentButton pa-md-top-20 pa-md-bottom-20 pa-sm-top-20 pa-sm-bottom-20">
                          <p class="text-blue">{{t "index.browseContent.description_3"}}</p>
                      </li>
                      <li class="standard pa-md-top-15 pa-md-bottom-15 pa-md-left-2 pa-md-right-2 pa-sm-top-5 pa-sm-bottom-5 pa-sm-left-2 pa-sm-right-2">
                        {{standard-dropdown
                        standards=standards
                        onStandardSelectedAction="onStandardSelected"}}
                      </li>
                  </ul>
              </div>
              <div class="row browse_content_footer text-center bg-blue  pa-md-6 pa-sm-6">
                  <div class="col-md-12 col-sm-12">
                  <p>{{t "index.browseContent.footer.description_1"}}<a class="text-blue">{{t "index.browseContent.footer.login"}}</a>{{t "index.browseContent.footer.description_2"}}</p>
                  </div>
              </div>
      </div>

  </div>
    <div class="row bg-gray getting-started row-eq-height">
        <div class="col-md-5 col-sm-5 getting-started-banner">

        </div>
        <div class="col-md-7 col-sm-7 getting-started-content">
            <div class="row">
                <h2 class="ma-md-15 ma-sm-top-6 ma-sm-left-15 ma-sm-right-15">{{t "index.gettingStarted.title"}}</h2>
                <div class="pa-md-left-15 pa-sm-left-15 col-md-10 col-sm-10 toolkit">
                    <a target="_blank"  href="http://about.goorulearning.org/educators/get-started/"><h3>{{t "index.gettingStarted.toolkit.title"}}</h3></a>
                    <p>{{t "index.gettingStarted.toolkit.description"}}</p>
                </div>
            </div>
            <div class="row">
                <div class="pa-md-left-15 pa-sm-left-15 col-md-10 col-sm-10 classroom">
                    <a target="_blank" href="http://about.goorulearning.org/educators/stories/"><h3>{{t "index.gettingStarted.classroom.title"}}</h3></a>
                    <p>{{t "index.gettingStarted.classroom.description"}}</p>
                </div>
            </div>
            <div class="row">
                <div class="pa-md-left-15 pa-sm-left-15 col-md-12 col-sm-12 bg-blue events">
                    <div class="events-icon">

                    </div>
                    <div>

                        <a target="_blank" class ="toolkit" href="http://about.goorulearning.org/community/events"><h3>{{t "index.gettingStarted.events.title"}}</h3></a>

                        <p>{{t "index.gettingStarted.events.description"}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
  <div class="row empowerStudents">
    <div>
      <h2 class="text-blue title text-center">{{t "index.empowerStudents.title"}}</h2>
    </div>
    <div class="col-center-block col-md-10 col-sm-12">
      <div class="row">
        <div class="col-md-3 col-sm-6 ma-sm-top-5 find">
          <div class="row">
            <div class="col-md-12 col-sm-8 col-center-block">
              <h3 class="text-center">{{t "index.empowerStudents.find"}}</h3>

              <div class="ma-md-top-15 ma-sm-top-15 findImg empowerSprite"></div>
              <p>{{t "index.findDescription"}}</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-sm-6 ma-sm-top-5 remix">
          <div class="row">
            <div class="col-md-12 col-sm-8 col-center-block">
              <h3 class="text-center">{{t "index.empowerStudents.remix"}}</h3>

              <div class="ma-md-top-15 ma-sm-top-15 remixImg empowerSprite"></div>
              <p>{{t "index.remixDescription"}}</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-sm-6 ma-sm-top-5 share">
          <div class="row">
            <div class="col-md-12 col-sm-8 col-center-block">
              <h3 class="text-center">{{t "index.empowerStudents.share"}}</h3>

              <div class="ma-md-top-15 ma-sm-top-15 shareImg empowerSprite"></div>
              <p>{{t "index.shareDescription"}}</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-sm-6 ma-sm-top-5 monitor">
          <div class="row">
            <div class="col-md-12 col-sm-8 col-center-block ">
              <h3 class="text-center">{{t "index.empowerStudents.monitor"}}</h3>

              <div class="ma-md-top-15 ma-sm-top-15 monitorImg empowerSprite"></div>
              <p>{{t "index.monitorDescription"}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row free_and_open vertical-align-col">
    <div class="col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-6 ">
      <div>
        <h1>{{t "index.freeAndOpen.title"}}</h1>
      </div>
    </div>
    <div class="col-md-offset-1 col-md-5 col-sm-offset-1 col-sm-5">
      <div class="row">
        <div class="col-md-12 col-sm-12 vertical-align-col free_and_open_descrip pa-md-10  pa-sm-10">
          <p>{{t "index.freeAndOpen.description"}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-3 col-md-9 col-md-offset-3 col-sm-9 vertical-align-col free_and_open_button pa-sm-10">
          <a class="btn btn-primary">{{t "index.freeAndOpen.button"}}</a>
        </div>
      </div>

    </div>
  </div>
</section>


