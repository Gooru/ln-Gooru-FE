<div class="external-player-container">
  <div class="header-container">
    <div class="action pull-left" {{action 'onClosePlayer'}} data-toggle="tooltip" data-placement="bottom" title="{{t 'common.close'}}">
      <div class="close-icon">
        {{gru-icon name='close'}}
      </div>
    </div>
    <div class="pull-left content-title">
      <div class="title-info">
        <i class="icon pull-left"></i>
        <p class="title pull-left">{{externalAssessment.title}}</p>
      </div>
    </div>
  </div>
  <div class="player-container">
  {{player.gru-external-assessment-page
    assessment=externalAssessment
    mapLocation=mapLocation
    source=source
  }}
</div>
</div>
