<div class="controller content-questions">
  <div class="questions clearfix">
    {{#each questions as |question|}}
      <div class="card">
        {{cards.gru-resource-card resource=question addEnabled=true editEnabled=isMyProfile onEditResource="editQuestion" onRemixQuestion="remixQuestion"}}
      </div>
    {{/each}}
  </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
