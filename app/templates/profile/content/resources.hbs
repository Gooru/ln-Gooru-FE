<div class="controller content-resources">
    <div class="resources clearfix">
      {{#each resources as |resource|}}
          <div class="card">
            {{cards.gru-resource-card resource=resource editEnabled=isMyProfile onEditResource="editResource"}}
          </div>
      {{/each}}
    </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
