<a class="first-view">

  <ul>
    {{#each firstUsers as |user index|}}
      <li class="item user {{if user.active 'active' ''}}">
        <img class="img-circle name-{{index}}" src="{{user.avatar}}" title="{{user.name}}" />
      </li>
    {{/each}}

    {{#if showMoreUsers}}
      <li class="item num-left">
        <span>{{remainingUsersNumber}}</span>
      </li>
    {{else}}
      {{#each remainingUsers as |user|}}
        <li class="item user {{if user.active 'active' ''}}">
          <img class="img-circle" src="{{user.avatar}}" title="{{user.name}}" />
        </li>
      {{/each}}
    {{/if}}
  </ul>

</a>

{{#if showMoreUsers}}
  <div class="remaining modal fade">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">{{t "common.numberStudents" count=users.length}}</h4>
        </div>
        <div class="modal-body">
          <ul>
            {{#each remainingUsers as |user|}}
              <li class="item user {{if user.active 'active' ''}}">
                <img class="img-circle" src="{{user.avatar}}" title="{{user.name}}" />
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
{{/if}}
