<div class="references-container">
  <div class="reference-info-container">
    <div class="reference-icon-container">
    </div>
    <div class="reference-title-container">
      <div class="reference-label">References</div>
      <div class="reference-links">{{offlineActivity.references.length}} Links</div>
    </div>
  </div>
  <div class="reference-container">
    {{offlineActivity.reference}}
  </div>
  {{#each offlineActivity.references as |reference index|}}
    <div class="reference-container">
      <a href="{{reference.location}}" target="_blank" class="reference-link">
        Reference {{plus-one index}}
      </a>
    </div>
  {{/each}}
</div>
