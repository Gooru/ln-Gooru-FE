<div class="question-information">
      <div class="btn-group">
          <button class="hint btn btn-info" disabled={{isHintButtonDisabled}} {{action 'showHint'}}>{{material-design-icon name='highlight'}}{{t "common.hints"}}
          ({{t "common.remaining" number=availableHints}})
          </button>
          <button class="explanation btn btn-info"
            disabled={{isExplanationButtonDisabled}} {{action 'showExplanation'}}>{{material-design-icon name='directions'}} {{t "common.explanation"}}</button>
      </div>
  <ol class="hints">
    {{#each hintsToDisplay as |hint|}}
      <li>{{{hint.hintText}}}</li>
    {{/each}}
  </ol>

  {{#if isExplanationShown}}
    <p class="explanation">{{{question.explanation}}}</p>
  {{/if}}
</div>