<div class="nav-player-container">
  <div class="prev disabled">
    {{gru-icon name="ic_skip_previous"}}
    <span>{{t "qz-question-viewer.previous"}}</span>
  </div>


  <div class="player-container">
    <div class="player-info">
      <div class="pull-left resource-title">
        <span>{{assessment.title}}</span>
      </div>
    </div>
  </div>

<div class="next-action">
  {{#if isDone}}
    {{#if classId}}
      <div  {{action "onExit" 'student.class.course-map' classId }}  class="next" data-toggle="tooltip" title="{{ t 'common.exit'}}">
        <span class="exit">{{t 'common.exit'}}</span>
      </div>
    {{else}}
      <div {{action "onExit" 'student.independent.course-map' courseId }}  class="next" data-toggle="tooltip" title="{{ t 'common.exit'}}">
        <span class="exit">{{t 'common.exit'}}</span>
      </div>
    {{/if}}
  {{else}}
    <div {{action 'playNext'}} class="next" data-toggle="tooltip" title="{{ t 'common.next'}}">
      <span>{{t 'common.next'}}</span> {{gru-icon name="skip_next"}}
    </div>
  {{/if}}
</div>
</div>
