<div class="question-panel">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>{{t "gru-question-viewer.question"}}</h2>
            <div class="question">
                <span>{{{question.text}}}</span>
              {{#if question.hasMedia}}
                  <img src="{{question.mediaUrl}}"/>
              {{/if}}
            </div>
            <div>
              {{partial 'components/player/gru-question-information'}}
            </div>
        </div>
    </div>
</div>

<div class="answers-panel">
    <div class="panel panel-default">
        <div class="panel-body">
        <h2>{{t "gru-question-viewer.answer"}}</h2>

        <form {{action "submitQuestion" on="submit"}}>
          {{component (questionConfig question.questionType 'component.player')
          question=question
          onAnswerChanged="changeAnswer"
          onAnswerCleared="clearAnswer"
          onAnswerCompleted="completeAnswer"}}
            <div class="actions">
                <button type="submit" class="save btn btn-lg btn-success" disabled="{{if isSubmitDisabled true null}}">{{buttonText}}</button>
            </div>
        </form>
      </div>
    </div>
</div>

