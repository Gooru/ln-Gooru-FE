<div class="question-panel">
  <h3>{{t "gru-question-viewer.question"}}</h3>
  <div class="question">
    <span>{{{question.text}}}</span>
    {{#if question.media}}
      <img src="{{question.media}}"/>
    {{/if}}
  </div>
  <div class="information">
    <button class="hint btn btn-default">{{t "common.hints"}}</button>
    <button class="explanation btn btn-default">{{t "common.explanations"}}</button>
  </div>
</div>

<div class="answers-panel">
  <h3>{{t "gru-question-viewer.answer"}}</h3>

  <form {{action "submitQuestion" on="submit"}}>

    {{#if question.isMultipleChoice}}
      {{player.questions.gru-multiple-choice
      question=question
      onAnswerChanged="changeAnswer"
      onAnswerCleared="clearAnswer"
      onAnswerCompleted="completeAnswer"
      }}
    {{/if}}

    {{#if question.isMultipleAnswer}}
      {{player.questions.gru-multiple-answer
      question=question
      onAnswerChanged="changeAnswer"
      onAnswerCleared="clearAnswer"
      onAnswerCompleted="completeAnswer"
      }}
    {{/if}}

    {{#if question.isTrueFalse}}
       {{player.questions.gru-true-false
       question=question
       onAnswerChanged="changeAnswer"
       onAnswerCleared="clearAnswer"
       onAnswerCompleted="completeAnswer"
       }}
    {{/if}}

    {{#if question.isOpenEnded}}
      {{player.questions.gru-open-ended
      question=question
      onAnswerChanged="changeAnswer"
      onAnswerCleared="clearAnswer"
      onAnswerCompleted="completeAnswer"
      }}
    {{/if}}

    {{#if question.isReorder}}
      {{player.questions.gru-reorder
      question=question
      onAnswerChanged="changeAnswer"
      onAnswerCleared="clearAnswer"
      onAnswerCompleted="completeAnswer"
      }}
    {{/if}}

   {{#if question.isFIB}}
    {{player.questions.gru-fib
      question=question
      onAnswerChanged="changeAnswer"
      onAnswerCleared="clearAnswer"
      onAnswerCompleted="completeAnswer"
    }}
    {{/if}}

    <div class="actions">
      {{#if isSubmitDisabled}}
        <button type="submit" class="save btn btn-lg btn-primary" disabled>{{t "common.submit"}}</button>
      {{else}}
        <button type="submit" class="save btn btn-lg btn-primary">{{t "common.submit"}}</button>
      {{/if}}
    </div>
  </form>
</div>
