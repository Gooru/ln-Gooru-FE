<p class="instructions">
  {{instructions}}
</p>

<div class="answer-choices clearfix">

  <ul>
    {{#each answers as |answer|}}
      <li data-id="{{answer.id}}" class="answer">

        {{#if question.isHotSpotImage}}
            <img class="img-thumbnail" src="{{answer.content}}" />
            <div>{{gru-icon name='check_circle'}}</div>
        {{else}}
            <span>{{{answer.content}}}</span>
            <div>{{gru-icon name='done'}}</div>
        {{/if}}

      </li>
    {{/each}}
  </ul>

</div>