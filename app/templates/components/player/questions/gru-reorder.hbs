
<p class="instructions">
  {{t "player.gru-reorder.instructions"}}
</p>

<div class="answer-choices">
    <ul class="sortable {{if readOnly 'disabled'}}{{if areAnswersShuffled 'shuffled' 'order'}}">
      {{#each answers as |answer|}}
        <li data-id="{{answer.id}}">
          {{gru-icon name='menu'}}
          <div>{{{answer.text}}}</div>
        </li>
      {{/each}}
    </ul>
</div>
