
<p class="instructions">
  {{t "gru-multiple-choice.instructions"}}
</p>

<div class="answer-choices">
  <form class="form-horizontal">
    {{#each question.answers as |answer|}}
    <div class="radio">
        {{#radio-button
          value=answer.id
          changed="selectAnswerChoice"
          name="answer-choice-radio"}}
          {{{answer.text}}}
          {{/radio-button}}
    </div>
    {{/each}}
  </form>
</div>


