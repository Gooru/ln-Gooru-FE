
<p class="instructions">
  {{t "gru-multiple-choice.instructions"}}
</p>

<div class="answer-choices">
  <form class="form-horizontal">
    {{#each question.answers as |answer index|}}
      <div class="radio">
        {{#radio-button
            value=answer.id
            changed="selectAnswerChoice"
            name="answer-choice-radio"}}
            <p>({{answer-letter index}})</p>{{{answer.text}}}
        {{/radio-button}}
      </div>
    {{/each}}
  </form>
</div>


