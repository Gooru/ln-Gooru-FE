<div class="content">
  {{#if resource.isQuestion}}
    {{player.gru-question-viewer question=resource onSubmitQuestion="submitQuestion"}}
  {{else}}
    {{#if resource.hasNarration}}
      <div class="narration">
        {{#if resource.hasOwner}}
          <img class="avatar" src="{{ resource.owner.avatarUrl }}">
        {{/if}}
        <span class="message">
          {{resource.narration}}
        </span>
      </div>
    {{/if}}

    {{#if resource.isImageResource}}
      {{player.resources.gru-image resource=resource}}
    {{/if}}

  {{/if}}
</div>


