<div class="card-container" {{action "onSelectCard"}}>
    <div class="collection-img" style="background-image: url({{collection.thumbnailUrl}})">
</div>
  <div class="collection-performance">
    <div class="icon-{{type}}">
    </div>
    <div class="title">
      <span class="ellipsis">{{collection.title}}</span>
    </div>
    <div class="performance" style="background-color:{{if context (grade-color context.scoreInPercentage) defaultBarColor}}">
      <span class="score">
        {{#if context}}
          {{#if context.scoreInPercentage}}
            {{context.scoreInPercentage}}%
          {{else}}
            0%
          {{/if}}
        {{else}}
          --
        {{/if}}
      </span>
    </div>
  </div>
  <div class="collections">
    {{#each collection.children as |resource|}}
      <div class="resource">
        {{#if (eq type "assessment")}}
          <div class="question-img"></div>
        {{else}}
          <div class="resource-img {{resource.format}}"></div>
        {{/if}}
        <div class="collection-info">
          <p class="title ellipsis">{{resource.title}}</p>
          {{#if (eq type "assessment")}}
            <span class="type">{{t (concat "common.question-type." resource.type)}}</span>
          {{else}}
            <span class="type">{{t (concat "common.resource-format." resource.format)}}</span>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
