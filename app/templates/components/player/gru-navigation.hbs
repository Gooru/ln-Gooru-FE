<div class="content">
    <div class="navigation-bar hidden-md hidden-lg">
      <span {{action 'openNavigator'}}>
        {{gru-icon name='keyboard_arrow_down'}} <h5>{{t  "common.menu"}}</h5>
      </span>
    </div>
   <div class="reaction-bar col-xs-12">
     <div class="panel panel-default">
         <div class="panel-body">
           {{gru-emotion-picker startEmotion=ratingScore onChangeEmotion="changeEmotion" readOnly=readOnly}}
           {{#unless submitted}}
             <button class="btn btn-success finish-collection hidden-xs pull-right" {{action "finishCollection"}}> {{t "common.submit-all"}}</button>
           {{else}}
             <button class="btn btn-success view-report hidden-xs pull-right" {{action "viewReport"}}> {{t "player.gru-navigation.view-report"}}</button>
           {{/unless}}

         </div>

     </div>

   </div>

</div>
