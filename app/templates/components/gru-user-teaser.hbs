{{#if firstUser.avatarUrl }}
    <span>
        <img class="avatar" src="{{firstUser.avatarUrl}}">
    </span>
{{else}}
    <span>
        <img class="avatar" src="assets/gooru/profile.png">
    </span>
{{/if}}
<span class="user-full-name">
  <a {{action 'selectUser'}}>{{firstUser.fullName}}</a>
</span>
<span class="total-users-left">
    {{#if usersLeft}}
        <p>+{{usersLeft}}</p>
    {{/if}}
</span>
