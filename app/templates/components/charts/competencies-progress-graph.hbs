<div class="progress-graph-container">
  <div class="progress-icon-container" {{action "onClickProgressChart"}}>
    {{gru-icon name="equalizer"}}
  </div>
  <div class="progress-label">View</div>
  <div class="progress-container">
    <div class="progress-graph mastered-progress competency-status-5 {{if (eq masteredCount 0) 'no-value'}}" style="height: {{find-percentage totalCount masteredCount}}%;">
      <span class="competency-status-5">{{masteredCount}}</span>
    </div>
    <div class="progress-graph inprogress-progress competency-status-1 {{if (eq inProgressCount 0) 'no-value'}}" style="height: {{find-percentage totalCount inProgressCount}}%;">
      <span class="competency-status-1">{{inProgressCount}}</span>
    </div>
    <div class="progress-graph notstarted-progress competency-status-0 {{if (eq notStartedCount 0) 'no-value'}}" style="height: {{find-percentage totalCount notStartedCount}}%;">
      <span class="competency-status-0">{{notStartedCount}}</span>
    </div>
  </div>
</div>
