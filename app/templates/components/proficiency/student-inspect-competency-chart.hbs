<div class="chart-container">
  <div class="graded-chart-container">
    <div class="taxonomy-grades-container">
      {{proficiency.taxonomy-grades onSelectGrade="onSelectGrade" classGrade=classGrade subjectCode="K12.MA"}}
    </div>
    <div class="scrollable-chart">
      <div id="student-inspect-competency-chart"></div>
    </div>
  </div>
  <div class="domain-sequence" style="width:{{width}}px">
    {{#each taxonomyDomains as |taxonomyDomain index |}}
      <li class="domain-counts" title="{{taxonomyDomain.domainName}}" data-toggle="tooltip">
        {{taxonomyDomain.domainSeq}}
      </li>
    {{/each}}
  </div>
  <div class="proficiency-legends">
    <div class="mastered legend">
      <span class="box"></span>
      <span class="title">{{t 'profile.proficiency.mastered'}}</span>
    </div>
    <div class="in-progress legend">
      <span class="box"></span>
      <span class="title">{{t 'profile.proficiency.in-progress'}}</span>
    </div>
    <div class="not-started legend">
      <span class="box"></span>
      <span class="title">{{t 'profile.proficiency.not-started'}}</span>
    </div>
    <div class="skyline legend">
      <span class="box-skyline"></span>
      <span class="title">{{t 'profile.proficiency.skyline'}}</span>
    </div>
    <div class="baseline legend">
      <span class="box-destination"></span>
      <span class="title">{{t 'profile.proficiency.grade-line'}}</span>
    </div>
  </div>
</div>

{{#if isLoading}}
  <div class="loading-spinner">
    {{three-bounce-spinner}}
  </div>
{{/if}}
