<div class="modal-header">
    <button type="button" class="close" aria-label="{{t 'common.close'}}" data-dismiss="modal">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>
<div class="navigation">
  {{gru-bubbles bubbleOptions=questionsNavOptions onBubbleSelect='bubbleSelect'}}
  {{#if selectedQuestion}}
      <div class="selected-question">
          Q{{selectedQuestion.order}} {{truncate text=selectedQuestion.text type='medium'}}
      </div>
  {{/if}}
</div>
<div class="body">
    <div class="question-info">
       {{reports.class-assessment.gru-question-information question=selectedQuestion}}
    </div>
    <div class="question-metrics">
        <div class="chart">
          {{charts/gru-x-bar-chart data=selectedQuestionBarChartData.data}}
            <span class="ratio">
        <em>{{selectedQuestionBarChartData.completed}}</em>/<em>{{selectedQuestionBarChartData.total}}</em>
      </span>
        </div>
    </div>
</div>