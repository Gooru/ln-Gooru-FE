<div class="navigation">
  {{gru-bubbles bubbleOptions=questionsNavOptions onBubbleSelect='bubbleSelect'}}
  {{#if anonymous}}
    <button class="btn-results btn btn-success" {{action 'showResult'}}>
      {{t (if showResult 'common.hide-results' 'common.show-results')}}
    </button>
  {{/if}}
</div>
<div class="body">
    <div class="question-info">
       {{reports.class-assessment.gru-question-information question=selectedQuestion anonymous=anonymous}}
    </div>
    <div class="question-metrics">
        {{reports.class-assessment.gru-question-performance
          question=selectedQuestion
          reportData=reportData
          anonymous=anonymous
          students=students
          showResult=showResult}}
    </div>
</div>