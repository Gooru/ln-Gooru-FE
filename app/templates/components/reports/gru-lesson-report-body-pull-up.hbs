<div class="report-body-content">
  <!--  -->
  <div class="report-banner">
    <div id="teacher-report-carousel" class="carousel slide" data-ride="carousel" data-interval="false">

        <div class="carousel-inner">
        <div class="item active">
          <div class="report-avrg">
                <span class="dummy-avg" style= {{safe-html (concat "background-color:" (grade-color context.lesson.performance.score))}}><p>{{context.lesson.performance.score}}%</p></span>
          </div>
           <div class="toggle-options dont-show">
            <span class="opt1 pull-left">COMPENTENCY</span>
            <span class="toggle-switch pull-left ">switch</span>
            <span class="opt2">PERFORMANCE</span>
          </div>
        </div>
        <div class="item">
          <img class="d-block w-100" src="..." alt="Second slide">
        </div>
        <div class="item">
          <img class="d-block w-100" src="..." alt="Third slide">
        </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <i class="material-icons left  middle-indicator-text">chevron_left</i>
        <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <i class="material-icons right  middle-indicator-text">chevron_right</i>
        <span class="sr-only">Next</span>
        </a>
    </div>
  </div>
  <!--  -->
  <div class="collapse-text">
    {{#if tags.length}}
      {{taxonomy.gru-taxonomy-tag-list tags=tags tagsVisible=1  showTitle=true}}
    {{/if}}
  </div><!-- collapse text div ends -->
  <!-- View 3  -->
  <div class="report-filters">
    <div class="filter-title"><span>Filter By</span></div>
    <div class="c-filter collection data-filter"  {{action 'filterByReportData' 'collection'}}><i class="material-icons c-icon" >view_comfy</i> <span>Collections</span></div>
    <div class="a-filter assessment data-filter active" {{action 'filterByReportData' 'assessment'}}><div class="p-box-bl"><span>%</span></div> <span>Assessments</span></div>

    <div class="performance"><i class="fa fa-fw fa-sort c-done-all dont-show" {{action 'sortStudents' score }}></i><i class="material-icons">done_all</i><span>Performance</span></div>
    <div class="time-spent" {{action 'timeSpentToggle'}}><i class="fa fa-fw fa-sort c-done-all dont-show"></i><i class="material-icons">access_time</i> <span>Time Spent</span></div>
    <div class="reactions"><i class="material-icons ">%</i> <span>Reactions</span></div>
  </div>
<div class="outer-div">
  {{#if isLoading}}
    {{three-bounce-spinner}}
  {{else}}
<!-- testing table -->
<table>
   <thead>
     <tr>
       <th>
         <div class="header-filters">
           <div class="name-filter">
         <span class="name-header">{{tableHeader.student}}</span>
         <span class="first-header {{if sortByFirstnameEnabled 'active'}}" {{action 'sortByFirstName'}}>
           <span>{{t 'common.first'}}</span>
         {{#if sortByFirstnameEnabled}}
           {{gru-icon name="keyboard_arrow_up"}}
         {{else}}
           {{gru-icon name="keyboard_arrow_down"}}
         {{/if}}
         </span>
         <span class="last-header {{if sortByLastnameEnabled 'active'}}" {{action 'sortByLastName'}}>
           <span>{{t 'common.last'}}</span>
           {{#if sortByLastnameEnabled}}
             {{gru-icon name="keyboard_arrow_up"}}
           {{else}}
             {{gru-icon name="keyboard_arrow_down"}}
           {{/if}}
         </span>
       </div>
     </div>
       </th>
       {{#each tableHeader.collections as |collection|}}
         <th class="m-width {{collection.format}} {{unless collection.performance.hasStarted 'not-started'}}" {{action 'onClickCollectionReport' collection tableHeader.collections}}>
           <div class="score-circle-g" style= {{safe-html (concat "background-color:" (grade-color collection.score))}}>
            <img src='/assets/gooru/lesson_assessment_white.svg' >
           </div>
           <div class="assessment-title">{{collection.title}}</div>
         </th>
       {{/each}}
     </tr>
   </thead>
   <tbody>
     {{#each tableRow as |studentPerformance|}}
       <tr>
         <td class="prof-icon">
           <span class="student-profile"><img src="{{studentPerformance.thumbnail}}" class="img-circle" width="30" height="30" /></span>
           <span class="student-name">{{studentPerformance.fullName}}</span></td>
           {{#each studentPerformance.collections as |collectionPerformance|}}
             <td class="r-bdr">
               <div class="performance-section"><span class="score-actions">{{if collectionPerformance.score (concat collectionPerformance.score '%') '--'}}</span></div>
               <div class="performance-section time-clr"><span class="ts-actions">{{if collectionPerformance.timeSpent (concat collectionPerformance.timeSpent '') '--'}}</span></div>
             </td>
           {{/each}}
       </tr>
     {{/each}}
   </tbody>
 </table>
 {{/if}}
<!-- testing table ends -->

</div>
  <!-- View 3 Ends -->

</div><!-- report body content div ends -->
