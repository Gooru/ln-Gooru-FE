<div class="title">
    <h2>{{t "common.questions"}}</h2>
</div>
<div class="switch-section">
  {{gru-switch switchOptions=switchOptions}}
</div>
<table>
    <thead>
    <tr>
        <th class="header number">
          {{t "common.number"}}
        </th>
        <th class="header question">
          {{t "common.question"}}
        </th>
        <th class="header answer">
          {{t "common.answer"}}
        </th>
        <th class="header score">
          {{t "common.score"}}
            <span>{{fa-icon icon='sort-desc'}}</span>
        </th>
        <th class="header time-spent">
          {{t "common.timeSpent"}}
            <span>{{fa-icon icon='sort-desc'}}</span>
        </th>
        <th class="header reaction">
          {{t "common.reaction"}}
            <span>{{fa-icon icon='sort-desc'}}</span>
        </th>
    </tr>
    </thead>
    <tbody>
    {{#each results as |result|}}
      <tr>
          <td class="number-question">
              {{result.order}}
          </td>
          <td class="question-text">
            {{result.question.text}}
          </td>
          <td class="question-answer">

          </td>
          <td class="question-score">
            {{#if result.correct}}
                <span class="correct">{{fa-icon icon='check-circle-o'}}</span>
            {{else}}
                <span class="incorrect">{{fa-icon icon='times-circle-o'}}</span>
            {{/if}}
          </td>
          <td class="question-time">
            {{result.timeSpent}}
          </td>
          <td class="question-reaction">
              <div class="emotion emotion-{{result.reaction}}">
              </div>
          </td>
      </tr>
    {{/each}}
    </tbody>
</table>

