<ul class="multiple-choices">
  {{#each answers as |answer index|}}
    <li class="{{if answer.selected 'correct-answer'}}">
      {{#if answer.selected}}
        <span class="{{if answer.correct 'correct' 'incorrect'}} {{if anonymous 'anonymous'}}">
          {{gru-icon name='radio_button_checked'}}
        </span>
      {{else}}
        <span class="column">{{gru-icon name='radio_button_unchecked'}}</span>
      {{/if}}
        <span class="answer-text {{if answer.correct 'correct-selection' 'incorrect-selection'}}"><span class="answer-letter">({{answer-letter index}})</span> {{{gru-math-text text=answer.text}}}</span>
    </li>
  {{/each}}
</ul>
