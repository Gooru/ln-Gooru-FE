<ul class="multiple-choices">
  {{#each answers as |answer index|}}
      <li>
        {{#if answer.selected}}
            <span class="{{if answer.correct 'correct' 'incorrect'}} {{if anonymous 'anonymous'}}">{{fa-icon icon='dot-circle-o'}}</span>
        {{/if}}
          <span class="answer-text">({{answer-letter index}}) {{{answer.text}}}</span>
      </li>
  {{/each}}
</ul>
