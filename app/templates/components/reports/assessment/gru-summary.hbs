<div class="summary-container">
  <div class="grade" style="background-color: {{gradeColor assessmentResult.correctPercentage}}">
    <span class="percentage">{{assessmentResult.correctPercentage}}%</span>
    <span class="attempts">
      <span class="fractional fraction"> {{{fractional numerator=assessmentResult.correctAnswers denominator=assessmentResult.questionsResults.length}}}</span>
      <span class="text">{{t 'common.correct'}}</span>
    </span>
  </div>
  <div class="overview">
    <h5>{{assessmentResult.title}}</h5>
    <div class="information">
      <span class="attempt">
        {{t "common.attempt"}}
        <span class="attempt-selector">
          <span class="dropdown current-attempt">
            <button class="btn btn-default dropdown-toggle" type="button"
                    data-toggle="dropdown">{{assessmentResult.selectedAttempt}}<span class="caret"></span></button>
            <ul class="dropdown-menu">
              {{#each attempts as |attempt|}}
                  <li><a href="#{{attempt.value}}">{{attempt.label}}</a></li>
              {{/each}}
            </ul>
          </span>
          <span>{{t "common.of"}}</span>
          <span class="total-attempts">{{assessmentResult.totalAttempts}}</span>
        </span>
      </span>
      <span class="date">{{formatDate assessmentResult.submittedOn 'h:mm a MMM. Do, YYYY'}}</span>
      <span class="time">
        <span>{{formatTime assessmentResult.totalTimeSpent}}</span>
      </span>
      <span class="reaction">
        <i class="emotion emotion-{{assessmentResult.averageReaction}}"></i>
      </span>
    </div>
    <div class="hidden-xs bubbles">
      {{gru-bubbles bubbleOptions=resourceLinks onBubbleSelect='bubbleSelect'}}
    </div>
  </div>
</div>


