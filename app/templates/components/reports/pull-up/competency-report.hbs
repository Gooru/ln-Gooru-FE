{{#if showPullUp}}
  <div class="overlay" {{action 'onClosePullUp' true}}></div>
{{/if}}
<div class="competency-report">
  <div class="competency-report-header">
    <div class="competency-status status-{{competency.status}}"></div>
    <div class="report-info">
      <div class="title-section {{if competency 'content'}}">
        <div class="domain-name">
          {{locale-translation (t (concat 'domain-code.' competency.domainCode)) (domain-gut-to-fw-transform fwDomains competency.domainCode competency.domainName 'fwDomainName')}}
        </div>
        <div class="title-content">
          <div class="competency-code">
            {{competency-gut-to-fw-transform
            fwCompetencies
            competency.competencyCode
            competency.competencyCode
            'frameworkCompetencyCode'
            showGutCompetency
            true
           }}
          </div>
        </div>
        {{#unless competency}}
          <div class="title">
            {{title}}
          </div>
        {{/unless}}
      </div>
      {{#if competency}}
        <div class="competency-status">
          {{competencyStatus}}
          {{#if isBadgedCompetency}}
            <div class="badge">
            </div>
          {{/if}}
        </div>
      {{/if}}
    </div>
    <div class="close-pullup" {{action "onClosePullUp"}}>
      {{gru-icon name="close"}}
    </div>
  </div>
  <div class="body">
    {{yield}}
  </div>
</div>
