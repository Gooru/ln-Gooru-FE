<div class="backdrop"></div>
<div class="performance-entry-container">
  <div class="header-container">
    <div class="title"><span class="{{type}}"><i class="icon"></i></span>{{title}}</div>
    {{#unless isClose }}
    <div class="performance-close-pullup" {{action 'onClosePerformanceEntry'}}>
      {{gru-icon name="close" }}
    </div>
    {{/unless}}
  </div>
  <div class="body-container {{if isClose 'hidden-show'}}">
      {{yield this}}
  </div>
  {{#if isClose}}
  <div class="cancel-body">
      <span>{{t 'gru-user-sign-up-cancel.exit?'}}</span>
      <div class="close-actions">
      <div class="cancel-button" {{action 'cancel'}}>{{t 'gru-assessment-confirmation.cancel'}}</div>
      <div class="confirm-button" {{action 'closePullUp'}}>{{t 'gru-assessment-confirmation.continue'}}</div>
    </div>
  </div>
  {{/if}}
</div>
