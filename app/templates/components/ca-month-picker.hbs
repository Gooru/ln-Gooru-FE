{{#if showCalendarView}}
  <div class="ca-year-nav-container">
    <div class="prev-cal-arrow" {{action 'showPreviousYear'}}>{{gru-icon name="keyboard_arrow_left"}}</div>
    <div class="cal-yyyy">{{format-date forYear 'YYYY'}} {{gru-icon name="arrow_drop_down"}}{{gru-icon name="arrow_drop_up"}}</div>
    <div class="next-cal-arrow" {{action 'showNextYear'}}>{{gru-icon name="keyboard_arrow_right"}}</div>
  </div>
  <div class="ca-monthpicker-container">
    <div id="ca-monthpicker"></div>
  </div>
{{else}}
  <span class="ca-month-picker-title">{{t 'common.add-to-unschedule'}}</span>
  <div class="ca-months">
    {{#each months as |month|}}
      <span class="{{if month.isPast 'past-month'}}" {{action 'onSelectMonth' month }}>{{month.monthName}}</span>
    {{/each}}
  </div>
{{/if}}
