<div class="form-group">
  {{textarea value=rawTextareaValue class="form-control" name=valuePath key-press="textareaTyping" focus-out="textareaValueChange" rows=rows}}
    <div class="error-messages">
      {{#if showMessage}}
          <span class="error">
            {{v-get model valuePath 'message'}}
          </span>
      {{/if}}
    </div>
</div>
