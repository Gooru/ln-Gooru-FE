<div class="suggestion-panel">
  <div class="suggestion-header">
    <i class="suggestion-icon {{collectionType}}"></i>
    <div class="suggestion {{unless isStudent 'hide-play'}}">
      <div class="title ellipsis" {{action 'onPreviewContent'}} title="{{content.title}}">
        {{content.collection.title}}</div>
      <div class="content-count">
        {{#if (or content.collection.questionCount content.collection.resourceCount)}}
          <span class="{{if (gt content.collection.resourceCount 0) '' 'invisible'}}" title="{{t "common.resources"}}">{{gru-icon name='local_library'}}</span><span
            class="{{if (gt content.collection.resourceCount 0) '' 'invisible'}}">{{content.collection.resourceCount}}</span>
          <span class="{{if (gt content.collection.questionCount 0) '' 'invisible'}}" title="{{t "common.questions"}}">{{gru-icon name='help_outline'}}</span><span
            class="{{if (gt content.collection.questionCount 0) '' 'invisible'}}">{{content.collection.questionCount}}</span>
        {{/if}}
      </div>
      {{#if isStudent}}
        {{#link-to 'player' content.collection.id (query-params type=collectionType role='student' source=source pathId=content.id pathType='proficiency.teacher') target="_blank"}}
          <div class="action">
            {{gru-icon name='play_arrow'}}
          </div>
        {{/link-to}}
      {{/if}}
      {{#if isStudent}}
        <span class="suggestion-icon">
          {{gru-icon name='explore'}}
        </span>
      {{else}}
        <span class="suggestion-icon suggest" {{action 'onSuggestContent' content collectionType}} data-toggle="tooltip" data-placement="left" title="Suggest">
          {{gru-icon name='explore'}}
        </span>
      {{/if}}
    </div>
  </div>
</div>
