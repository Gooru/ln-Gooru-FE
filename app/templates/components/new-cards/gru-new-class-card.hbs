<div class="panel {{if isGuestAccount 'guest-account' ''}}">
  <div class="panel-body">
    <div class="image">
      <p>{{t 'content.classes.create.title'}}</p>
    </div>
    {{validation/gru-input
             model=newClass
             valuePath='title'
             maxLength=25
             disabled = (if isGuestAccount true false)
             autofocus=false
             didValidate=didValidate
             class="form-group"
             placeholder=(t 'content.classes.create.class-name-input')
           }}
    <div class="info-form">
    </div>
    <div class="panel-footer">
      {{#gru-spinner-button classes='join-class-btn' text=(t 'common.loading') isLoading=isLoading}}
        <div class="join-class-btn" {{action "createClass"}}>{{t 'common.createClass'}}</div>
      {{/gru-spinner-button}}
    </div>

  </div>

</div>
