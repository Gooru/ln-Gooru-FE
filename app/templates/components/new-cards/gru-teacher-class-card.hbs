<div class="panel">
  <div class="panel-heading">
    <div class="title ellipsis" data-placement="bottom" data-toggle="tooltip" title="{{class.title}}" data-trigger="hover">
      {{truncate text=class.title maxLength=25}}
    </div>
    <div title="{{t 'teacher-landing.class.class-management'}}" data-toggle="tooltip" data-placement="top" data-trigger="hover">
      {{gru-icon name="settings"}}
    </div>
  </div>

  <div class="panel-body">
    <div class="information" style="background-image: url({{course.thumbnailUrl}})" {{action 'showAtc' }}>
      <div class="current-activity">
        {{t (if course "student-landing.class.assigned-course" "student-landing.class.no-course-assigned") }}
      </div>
      <div class="title-section">
        {{#if course.title}}
          <div {{action 'selectItem' 'course-map'}} class="title pointer" alt="{{course.title}}">
            {{truncate text=course.title maxLength=90}}
          </div>
        {{else}}
          <span>{{t "student-landing.not-available"}}</span>
        {{/if}}
      </div>
    </div>
    <div class="card-action-container {{if class.isPremiumClass 'premium-class'}}">
      <div class="atc-view" data-placement="bottom" data-toggle="tooltip" title="{{t 'teacher-landing.class.atc'}}" data-trigger="hover">
        <i class="icon" />
      </div>
      <div class="course-map grade-range-{{grade-range class.performanceSummary.score}}" data-placement="bottom" data-toggle="tooltip" title="{{t 'teacher-landing.class.course-map'}}" data-trigger="hover">
        <div class="course-map-icon">
          {{gru-icon name="sort"}}
        </div>
        <div class="course-map-score">
          {{if (and (gte class.performanceSummary.score 0) class.performanceSummary.score ) (concat class.performanceSummary.score '%') '--' }}
        </div>
      </div>
      <div class="class-activities grade-range-{{grade-range class.performanceSummaryForDCA.score}}">
        <div class="class-activities-icon" data-placement="bottom" data-toggle="tooltip" title="{{t 'student-landing.class.class-activities'}}" data-trigger="hover">
          <i class="icon" />
        </div>
        <div class="class-activities-score">
          {{if (and (gte class.performanceSummaryForDCA.score 0) class.performanceSummaryForDCA.score ) (concat class.performanceSummaryForDCA.score '%') '--' }}
        </div>
      </div>
      <div class="student-proficiency" data-placement="bottom" data-toggle="tooltip" title="{{t 'teacher-landing.class.student-proficiency'}}" data-trigger="hover">
        {{gru-icon name="school"}}
      </div>
      {{#if class.isPremiumClass}}
        <div class="completion-score">
          <span>{{totalCompleted}}/{{total}}</span>
        </div>
      {{/if}}
    </div>
    <div class="card-class-code">
      <span>{{t 'teacher-landing.class.class-management-tab.class-code'}}</span>
      <span class="class-code">{{class.code}}</span>
    </div>
  </div>
</div>
