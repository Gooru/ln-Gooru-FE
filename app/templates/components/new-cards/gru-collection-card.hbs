<div class="panel panel-default">
    <div class="panel-heading">
        <div class="image">
          {{#if editEnabled}}
            {{#if isCourse}}
              {{#link-to "content.courses.edit" content.id }}
                  <img class="img-responsive" src="{{content.thumbnailUrl}}"/>
              {{/link-to}}
            {{else}}
                <a {{action "editCollection" }}><img class="img-responsive" src="{{content.thumbnailUrl}}"></a>
            {{/if}}
          {{else}}
            {{#if isCourse}}
              {{#link-to "content.courses.play" content.id }}
                  <img class="img-responsive" src="{{content.thumbnailUrl}}"/>
              {{/link-to}}
              {{else}}
                <a {{action "openContentPlayer" content}}><img class="img-responsive" src="{{content.thumbnailUrl}}"></a>
            {{/if}}
          {{/if}}
        </div>
        <div class="collection-info">
            <div class="title-section">
              {{#if editEnabled}}
                {{#if isCourse}}
                  {{#link-to "content.courses.edit" content.id class="title" tagName="h3"}}
                    {{content.title}}
                  {{/link-to}}
                 {{else}}
                    <a {{action "editContent"}}> <h3 class="title" alt="{{ content.title }}">{{truncate text=content.title maxLength=40}}</h3></a>
                {{/if}}
              {{else}}
                {{#if isCourse}}
                  {{#link-to "content.courses.play" content.id class="title" tagName="h3"}}
                    {{content.title}}
                  {{/link-to}}
                {{else}}
                    <a {{action "openContentPlayer" content}}> <h3 class="title" alt="{{ content.title }}">{{truncate text=content.title maxLength=40}}</h3></a>
                {{/if}}
              {{/if}}
            </div>
            <span class="question-resources">
              {{#if hasResources}}
                  <span class="bar resource-count">| </span><p>{{t "cards.gru-course-card.resource" count=content.resourceCount}}</p>
              {{/if}}
              {{#if hasQuestions}}
                  <span class="bar question-count">| </span><p>{{t "cards.gru-course-card.question" count=content.questionCount}}</p>
              {{/if}}
            </span>
        </div>
    </div>
      <div class="panel-body">
              <div class="standards">
                {{#if tags.length}}
                  {{taxonomy.gru-taxonomy-tag-list tags=tags tagsVisible=1 isInCard=true showDescription=true}}
                {{/if}}
              </div>
              <div class="{{if isAssessment 'author' 'remixed-by'}}">
                {{#if isAssessment}}
                  {{#link-to 'profile.content.courses' content.owner.id class="pointer" tagName="div"}}
                      <span class="title">
                        {{t (if content.sameOwnerAndCreator "common.created-by" "common.remixed-by")}}
                      </span>
                      <img class="img-responsive" src="{{content.owner.avatarUrl}}">
                      <span class="owner">{{content.owner.displayName}}</span>
                  {{/link-to}}
                {{else}}
                  {{#if content.owner}}
                    {{#link-to 'profile.content.courses' content.owner.id class="pointer" tagName="div"}}
                        <span class="title">
                          {{t (if content.sameOwnerAndCreator "common.created-by" "common.remixed-by")}}
                        </span>
                        <img class="img-responsive" src="{{content.owner.avatarUrl}}">
                        <span class="owner">{{content.owner.displayName}}</span> {{#if content.remixCount}}+{{content.remixCount}}{{/if}}
                    {{/link-to}}
                  {{/if}}
                {{/if}}
              </div>
              <div class="description">
                  {{#if isCourse}}
                      <p class="truncate content-description">{{ content.description }}</p>
                    {{else}}
                      <p class="truncate learning-objective">{{ content.learningObjectives }}</p>
                  {{/if}}
              </div>
            <div class="statistics out-of-scope">
                {{#if isCourse}}
                    <div class="classrooms">
                      {{gru-icon name="group_work"}}
                        <span>{{t 'cards.gru-collection-card.classrooms' count=content.totalClassrooms }}</span>
                    </div>
                {{else}}
                    <div class="course">
                      {{gru-icon name="chrome_reader_mode"}}
                        <span>{{t 'cards.gru-collection-card.courses' count=content.totalCourses }}</span>
                    </div>
                {{/if}}
                <div class="students">
                  {{gru-icon name="person"}}
                    <span>{{t 'cards.gru-collection-card.students' count=content.totalStudents }}</span>
                </div>
            </div>
      </div>
      <div class="panel-footer">
          <div class="options">
              <div>
                  <button class="preview-btn btn btn-success btn-sm">{{t "common.preview"}}</button>
              </div>
          </div>
          <div class="actions">
              <button class="btn share-btn no-bgd" title="{{t 'common.share'}}" data-toggle="tooltip" data-placement="auto"  data-trigger="hover" disabled={{disabledActions}}>{{gru-icon name="share"}}</button>
              <button class="btn bookmark-btn no-bgd" title="{{t 'common.bookmark'}}" data-toggle="tooltip" data-placement="auto" data-trigger="hover" disabled={{disabledActions}}> {{gru-icon name="turned_in_not"}}</button>
          </div>
      </div>
</div>
