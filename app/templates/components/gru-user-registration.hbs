<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'common.close'}}" data-ember-action="587">
    <span aria-hidden="true">Ã—</span>
  </button>
  <h4 class="modal-title">Sign Up</h4>
</div>
<div class="modal-body">
  <div class="wrapper">

    <div class="main">
      <div class="sign-up-form">
        <h3>{{t "gru-user-sign-up.joinTitle"}}</h3>

        <div class="sub-header" title="{{t "gru-user-sign-up.joinDescription"}}">{{t "gru-user-sign-up.joinDescription"}}</div>
        <div class="row">
          <div class="col-md-9 col-center-block login-form-box">
            <button type="button" class="connect-button" title="{{t "gru-user-sign-up.googleButton"}}">{{t "gru-user-sign-up.googleButton"}}</button>
            <div class="why-google">
              <div class="why-google-desc" title="{{t "gru-user-sign-up.whyGoogle"}}">{{t "gru-user-sign-up.whyGoogle"}}</div>
              <div class="img-question" data-toggle="tooltip" data-html="true" data-placement="bottom"
                   title="<p><strong>{{t "gru-user-sign-up.whyGoogle"}}?</strong></p><p>{{t "gru-user-sign-up.descriptionWhyGoogle"}}</p>"></div>
            </div>
            <div class="divider">
              <div class="divider-text" title="{{t "gru-user-sign-up.or"}}">{{t "gru-user-sign-up.or"}}</div>
            </div>
            <div class="email-sign-up pa-top-3">
              <div class="no-google-account"
                   title="{{t "gru-user-sign-up.noGoogleAccount"}}">{{t "gru-user-sign-up.noGoogleAccount"}}</div>
              <button
                  class="btn btn-link" {{action "showModal" "gru-user-sign-up"}}>{{t "gru-user-sign-up.signUpEmail"}}</button>
            </div>
          </div>
        </div>
        <div class="row footer">
          <div class="col-md-12">
            <span class="log-in-here">{{t "gru-user-sign-up.haveAccount"}}<a>{{t "gru-user-sign-up.clickLogIn"}}</a></span>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
