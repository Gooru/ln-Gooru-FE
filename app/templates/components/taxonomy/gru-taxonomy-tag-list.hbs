{{#each visibleTags as |taxonomyTag|}}
  {{taxonomy.gru-taxonomy-tag model=taxonomyTag hasTooltip=hasTooltips onRemove=(action 'removeTag' taxonomyTag)}}
{{/each}}

{{#if nonVisibleTags}}
  <button class="non-visible-tags">
    <span>{{nonVisibleTags}}+</span>
  </button>
  <div class="all-tags">
    {{#each tags as |taxonomyTag|}}
      {{taxonomy.gru-taxonomy-tag
      model=taxonomyTag
      hasTooltip=isInSearch
      isInSearch=isInSearch
      onRemove=(action 'removeTag' taxonomyTag)
      }}
    {{/each}}
  </div>
{{/if}}
