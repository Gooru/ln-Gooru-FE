{{#if model.isReadonly}}
  <div class="content">
    <b class="truncate">{{model.data.label}}</b>
    <span class="truncate">{{model.data.caption}}</span>
  </div>

  {{#if hasTooltip}}
    <div class="tag-tooltip">
      <span>{{model.data.title}}</span>
    </div>
  {{/if}}

{{else}}
  <button class="toggle" {{action 'toggleState'}}>
    <div>
      <b>{{model.data.label}}</b>
      <span>{{model.data.caption}}</span>
    </div>
  </button>
{{/if}}

{{#if model.isRemovable}}
  <button class="remove" {{action 'removeTag'}}>{{gru-icon name="clear"}}</button>
{{/if}}

