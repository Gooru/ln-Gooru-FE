{{#each questionItems as |item|}}
  <div class="item">
    <div class="context ellipsis">
      <span class="unit-prefix">{{item.unitPrefix}}</span><span class="greater-than">{{gru-icon name='chevron_right'}}</span>
      <span class="lesson-prefix">{{item.lessonPrefix}}</span><span class="greater-than">{{gru-icon name='chevron_right'}}</span>
      <span class="collection-name">{{item.collectionName}}</span>
    </div>
    <div class="question ellipsis">
      <span class="greater-than">{{gru-icon name='chevron_right'}}</span>
      <a><span class="question-name">{{item.questionName}}</span></a>
    </div>
    <div class="students">
      ({{t 'class.analytics.performance.gru-grade-items.students' count=item.studentCount}})
    </div>
  </div>
{{/each}}