<div class="content-filters-container">
  <div class="filters-header-label">
    Choose filters to apply
  </div>
  <div class="filters-container">
    <div class="date-range-filter-container">
      <div class="date-range-selector">
        <div class="date-range-label" {{action "onShowDateRangeSelector"}}>
          Date Range <span class="info-icon" title="Select start/end date to filter search results" data-toggle="tooltip">{{gru-icon name="info" style='material-icons-outlined'}}</span>
        </div>
        <div class="date-range-value" {{action "onShowDateRangeSelector"}}>
          {{#if daterange}}
            {{format-date daterange.startDate 'DD MMM YYYY'}} -
            {{format-date daterange.endDate 'DD MMM YYYY'}}
          {{else}}
            Click here to select date range
          {{/if}}
        </div>
      </div>
      {{#if isShowDateRangeSelector}}
        <div class="date-range-filter">
          {{ca-daterange-datepicker
            closeDatePicker='onCloseDatePicker'
            onScheduleForDate='onSelectDateRange'
            userStartDateAsToday=false
            disableFutureDate=false
            enableScheduleMonth=false
            courseStartDate=pickerStartDate
            startDate=startDate
            endDate=endDate
            forChangeStartDateNavMonth=true
            allowTwoDateRangePicker=true}}
        </div>
      {{/if}}
    </div>

    <div class="gut-selector">
      <div class="gut-header-container">
        GUT <span class="info-icon" title="Select Subject, Domain and or Competency to filter search results" data-toggle="tooltip">{{gru-icon name="info" style='material-icons-outlined'}}</span>
      </div>
      <div class="gut-body-container">
        {{gru-gut-filter
          gutFilters = gutFilters
          userPreference = userPreference}}
      </div>
    </div>
  </div>
  <div class="apply-filters" {{action "applyFilters"}}>
    Apply Filters
  </div>
</div>
