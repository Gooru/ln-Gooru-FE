<div class="offline-activites-container">
  <div class="header-container">
    <div class="icon"></div>
    <div class="title">Offline Activities</div>
    <div class="search-items-container">
      <div class="filter-search hidden">
        {{gru-icon name="filter_list"}}
      </div>
    </div>
  </div>
  <div class="body-container">
    {{#each learnedPortfolioItems as | portfolioItems |}}
      <div class="type-level-container">
        <div class="sub-type-label">
          {{t portfolioItems.label}}
        </div>
        <div class="offline-activities">
          {{#each portfolioItems.offlineActivities as |offlineActivity|}}
            {{portfolio/gru-portfolio-content-card content = offlineActivity}}
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
