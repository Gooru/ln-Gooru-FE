<div class="panel panel-default">
    <div class="panel-heading">
        <div class="image">
            <img class="img-responsive" src={{user.avatarUrl}}>
        </div>
        <div class="user-info">
          <h6 class="name truncate">
            {{#link-to "profile.content.courses" user.id tagName="div" class="pointer"}} {{ user.displayName }} {{/link-to}}
          </h6>
            <span class="district">{{#if user.schoolDistrict}}{{user.schoolDistrict}}{{else}}{{user.country}}{{/if}}</span>
        </div>
    </div>
    <div class="panel-body">
        <div class="following-followers">
            <div class="followers">
                <div class="count  text-center">
                    <span>{{user.followers}}</span>
                </div>
                <div class="description text-center">
                  {{t "cards.gru-profile-card.followers"}}
                </div>
            </div>
            <div class="following">
                <div class="count text-center">
                  <span>{{user.followings}}</span>
                </div>
                <div class="description text-center">
                  {{t "cards.gru-profile-card.following"}}
                </div>
            </div>
        </div>
        <div class="follow-btn">
          {{#if followingFilter}}
            <button class="btn btn-sm btn-following"{{action 'unFollow'}}>{{t "cards.gru-profile-card.following"}}</button>
          {{else}}
            <button class="btn btn-sm {{if user.isFollowing 'btn-following' 'btn-success'}}"{{action 'setFollow'}}>{{#if user.isFollowing}}{{t "cards.gru-profile-card.following"}} {{else}}{{t "cards.gru-user-network-card.follow"}}{{/if}}</button>
          {{/if}}
        </div>
    </div>
</div>
