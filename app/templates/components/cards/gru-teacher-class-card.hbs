<div class="panel">
  {{#link-to 'teacher.class' class.id}}
    <div class="panel-heading">
      <div class="title">
        <h5>{{class.title}}</h5>
      </div>
      <div class="code">
        <span>{{class.code}}</span>
      </div>
    </div>
  {{/link-to}}
  <div class="panel-body">
    <div class="class-info col-md-4 col-sm-4 col-xs-4">
      <div class="students-info">
        {{gru-icon name="group"}} <span>{{t "cards.gru-class-card.student" count=studentCount}}</span>
      </div>
      <div class="chart">
        {{charts.gru-bubble-chart content=(concat score '%') color=(grade-color score)}}
        <span class="legend">{{t 'teacher-landing.latest-assessment'}}</span>
      </div>
    </div>
    <div class="greeting col-md-8 col-sm-8 col-xs-8">
      <span>{{t "teacher-landing.latest-announcement"}}</span>
      <div class="announcement">
        {{#if class.greeting}}
          {{class.greeting}}
        {{else}}
          {{t "common.not-applicable"}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
