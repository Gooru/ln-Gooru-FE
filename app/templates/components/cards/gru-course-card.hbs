<div class="thumbnail" {{action 'selectCourse'}}>
    <img src="{{course.imageUrl}}"/>
</div>
<div class="card-info">
    <div class="header">
        <h3 class="course-title" {{action 'selectCourse'}}>{{course.title}}</h3>
        <span class="icon">{{fa-icon icon="globe"}}</span>
    </div>
   <div class="card-content">
       <p class="total-units">{{course.totalUnits}} {{t "gru-course-card.units"}}</p>
       <p class="subject">{{course.subject}}</p>
   </div>
    <div class="remixed-users">
        <p class="remixed">{{t "gru-course-card.remixed-by"}}</p>
        <span class="users-teaser">{{gru-user-teaser users=users}}</span>
    </div>
    <div class="remix-button">
        <button class="btn btn-default" {{action 'remixCourse'}}>{{t "gru-course-card.remix"}}</button>
    </div>
</div>


