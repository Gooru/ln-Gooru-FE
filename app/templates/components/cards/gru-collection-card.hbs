<div class="panel panel-default">
    <div class="panel-heading">
        <div class="image">
            <a {{action "openContentPlayer" collection.id}}><img class="img-responsive" src="{{collection.thumbnailUrl}}"></a>
        </div>
        <div class="collection-info">
            <a {{action "openContentPlayer" collection.id}}> <h6 class="title truncate" alt="{{ collection.title }}">{{ collection.title }}</h6></a>
            <span class="question-resources">
              {{#if hasResources}}
                  <span class="bar">| </span><p>{{t "cards.gru-course-card.resource" count=collection.resourceCount}}</p>
              {{/if}}
              {{#if hasQuestions}}
                  <span class="bar">| </span><p>{{t "cards.gru-course-card.question" count=collection.questionCount}}</p>
              {{/if}}
            </span>
            {{#if collection.course }}
              <div class="course">
                {{gru-icon name="chrome_reader_mode"}}
                <p>{{t "cards.gru-course-card.in"}}
                {{#link-to "content.courses.play" collection.courseId class="pointer"}}
                  {{truncate text=collection.course type='collection-card-courses'}}
                {{/link-to}}
                </p>
              </div>
            {{/if}}
        </div>
    </div>
    <div class="panel-body">
        <div class="collection-details">
            <div class="standards">
                {{collection-results-standards collection=collection standards=collection.standards}}
            </div>
            <div class="{{if isAssessment 'author' 'remixed-by'}}">
              {{#if isAssessment}}
                {{#link-to 'profile.content.courses' collection.owner.id class="pointer" tagName="div"}}
                  <span class="title">
                    {{t (if collection.sameOwnerAndCreator "common.created-by" "common.remixed-by")}}
                  </span>
                  <img class="img-responsive" src="{{collection.owner.avatarUrl}}">
                  <span>{{collection.owner.displayName}}</span>
                {{/link-to}}
              {{else}}
                {{#if collection.owner}}
                  {{#link-to 'profile.content.courses' collection.owner.id class="pointer" tagName="div"}}
                    <span class="title">
                      {{t (if collection.sameOwnerAndCreator "common.created-by" "common.remixed-by")}}
                    </span>
                    <img class="img-responsive" src="{{collection.owner.avatarUrl}}">
                    <span>{{collection.owner.displayName}}</span> {{#if collection.remixCount}}+{{collection.remixCount}}{{/if}}
                  {{/link-to}}
                {{/if}}
              {{/if}}
            </div>
            <div class="description">
                <p class="truncate">{{ collection.learningObjectives }}</p>
            </div>
            <div class="buttons">
            {{#if remixEnabled }}
                <button class="remix-btn btn btn-success btn-sm " {{action "remixCollection"}}>{{t "common.remix"}}</button>
            {{/if}}
            {{#if editEnabled }}
                <button class="edit-btn btn btn-success btn-sm" {{action "editCollection"}}>{{t "common.edit"}}</button>
            {{/if}}
            </div>
            <div class="visibility">
              {{#unless collection.isVisibleOnProfile }}
                {{gru-icon name="visibility_off" class='pull-right'}}
              {{/unless}}
            </div>
        </div>
    </div>
</div>
