<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="image col-md-4 col-sm-4 col-xs-4">
              {{#if collection.imageUrl }}
                  <img class="img-responsive" src="{{ collection.imageUrl }}">
              {{else}}
                  <img class="img-responsive" src="assets/gooru/profile.png">
              {{/if}}
            </div>
            <div class="collection-info col-md-8 col-sm-8 col-xs-8">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <h6 class="title truncate" alt="{{ collection.title }}">{{ collection.title }}</h6>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                  <span class="question-resources">
                    {{#if hasResources}}
                        <span class="bar">|</span><p> {{collection.resourceCount}} {{#if hasSeveralResources}} {{t "search-result.resources"}} {{else}} {{t "search-result.resource"}} {{/if}} </p>
                    {{/if}}
                    {{#if hasQuestions}}
                        <span class="bar">|</span><p> {{collection.questionCount}}
                      {{#if hasSeveralQuestions}}{{t "search-result.questions"}} {{else}} {{t "search-result.question"}} {{/if}}</p>
                    {{/if}}
                  </span>
                    </div>
                    <div class="course col-md-12 col-sm-12 col-xs-12">
                        {{gru-icon name="chrome_reader_mode"}}<p>{{t "cards.gru-course-card.in"}}<a>{{collection.course}}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="standards col-md-12 col-sm-12 col-xs-12">
              {{#if collection.standards }}
                {{collection-results-standards collection=collection standards=collection.standards}}
              {{/if}}
            </div>
            <div class="{{if collection.isAssessment 'author' 'remixed-by'}} col-md-12 col-sm-12 col-xs-12">
               {{#if collection.isAssessment}}{{t "cards.gru-course-card.created"}}{{else}}{{t "cards.gru-course-card.remixed-by"}}{{/if}}
              {{#if collection.avatarUrl }}
                  <img class="img-responsive" src="{{ collection.avatarUrl }}">
              {{else}}
                  <img class="img-responsive" src="assets/gooru/profile.png">
              {{/if}}
                <div>
                 {{#if collection.isAssessment}}   <a href="{{ collection.profilePageUrl }}" target="_blank">{{collection.author}}</a>{{else}}<a>{{remixedByUser}}</a> +{{remixedUsers}}{{/if}}
                </div>
            </div>
            <div class="description col-md-12 col-sm-12 col-xs-12">
                <p>{{ collection.description }}</p>
            </div>
            <div class="remix-btn col-md-12 col-sm-12 col-xs-12">
                <button class="btn btn-primary btn-sm">{{t "cards.gru-course-card.remix"}}</button>
            </div>
        </div>
    </div>
</div>
