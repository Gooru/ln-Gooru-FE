<a {{action "selectUser" profile.user.id}}>
  <span class="img-wrapper"><img class="img-circle" src="{{profile.user.avatarUrl}}"
       alt="{{t "common.avatarFor"}} {{profile.user.fullNameInformal}}"/></span>
  <strong>{{profile.user.fullNameInformal}}</strong>
</a>
<div class="social">
		<span class="followers">
      <em>{{profile.followers}}</em> {{t "cards.gru-profile-card.followers"}}
    </span>
		<span class="following">
      <em>{{profile.followings}}</em> {{t "cards.gru-profile-card.following"}}
    </span>
</div>