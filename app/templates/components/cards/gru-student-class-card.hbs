<div class="panel {{if hasStarted 'has-course' 'no-course'}}">
  {{#if course}}
    <div class="panel-heading" style="background-color:{{grade-color class.performanceSummary.score}}">
      <div class="title ellipsis" data-placement="bottom" data-toggle="tooltip" title="{{class.title}}">
        {{#link-to 'student.class.course-map' class.id}}
          {{truncate text=class.title maxLength=25}}
        {{/link-to}}
      </div>
      <div class="code">
        <div class="title">{{t 'student-landing.class-code'}}</div>
        <div class="class-code ellipsis">{{class.code}}</div>
      </div>
    </div>
    <div class="panel-body" style="background-color:{{grade-color class.performanceSummary.score}}">
      <div class="information" style="background-image: url({{course.thumbnailUrl}})">
        {{#unless class.currentLocation}}
          <div class="start-studying {{if class.isNotAbleToStartPlayer 'no-play'}}" {{action "playCollection"}}>
            {{t "student-landing.start-studying"}}
          </div>
  {{else}}
    <div class="current-activity">
      {{#if isCompleted}}
        {{t "student-landing.last-activity"}}
      {{else}}
        {{t "student-landing.resume-current-activity"}}
      {{/if}}
    </div>
        {{/unless}}

        {{#if class.currentLocation}}
          <div class="title-section">
            {{#if showCurrentLocation}}
              <i class="{{collectionType}}"></i>
              <div class="title pointer" alt="{{class.currentLocation.collectionTitle}}" {{action "playCollection"}}>
                {{truncate text=currentLocationTitle maxLength=90}}
              </div>
            {{else}}
              <span>{{t "student-landing.not-available"}}</span>
            {{/if}}
          </div>
        {{/if}}
      </div>
      {{#unless class.isNotAbleToStartPlayer}}
        <div class="links">
          <ul>
            <li class="class-activities">
              <a {{action 'selectItem' 'class-activities'}}>
                <span>{{t 'student-landing.class.class-activities'}}</span>
              </a>
            </li>
            <li class="course-map">
              <a {{action 'selectItem' 'course-map'}}>
                <span>{{t 'student-landing.class.course-map'}}</span>
              </a>
            </li>
            <li class="performance">
              <a {{action 'selectItem' 'profile'}}>
                <span>{{t 'student-landing.class.my-location'}}</span>
              </a>
            </li>
          </ul>
        </div>
        <div class="performance pointer {{unless hasStarted 'not-started'}}" style="background-color:{{grade-color class.performanceSummary.score}}" {{action 'selectItem' 'report'}}>
          <div class="percentage">
            {{scorePercentage}}
          </div>
          <div class="completion-chart">
            {{charts/gru-x-bar-chart data=barChartData }}
            <label>{{completedPercentage}}</label>
          </div>
        </div>
      {{else}}
        <div class="alert-player-error" {{action 'onClearAlert'}}>
          <span class="clear-alert">{{gru-icon name="clear"}}</span>
          <div class="alert-status">{{t 'common.errors.no-studymaterial'}}</div>
        </div>
      {{/unless}}
    </div>
  {{else}}
    <div class="panel-heading">
      <div class="title" data-placement="bottom" data-toggle="tooltip" title="{{class.title}}">
        {{#link-to 'student.class.course-map' class.id}}
          {{truncate text=class.title maxLength=25}}
        {{/link-to}}
      </div>
      <div class="code">
        <div class="title">{{t 'student-landing.class-code'}}</div>
        <div class="class-code">{{class.code}}</div>
      </div>
    </div>
    <div class="panel-body">
      <div class="information">
        <span class="no-course-assigned">{{t "student-landing.class.no-course-assigned"}}</span>
      </div>
      <div class="links">
        <ul>
          <li class="class-activities">
            <a {{action 'selectItem' 'class-activities'}}>
              <span>{{t 'student-landing.class.class-activities'}}</span>
            </a>
          </li>
          <li class="course-map">
            <a {{action 'selectItem' 'course-map'}}>
              <span>{{t 'student-landing.class.course-map'}}</span>
            </a>
          </li>
          <li class="performance">
            <a {{action 'selectItem' 'profile'}}>
              <span>{{t 'student-landing.class.my-location'}}</span>
            </a>
          </li>
        </ul>
      </div>
      <div class="performance">
        <div class="percentage">
          {{scorePercentage}}
        </div>
        <div class="completion-chart">
          {{charts/gru-x-bar-chart data=barChartData }}
          <label>{{completedPercentage}}</label>
        </div>
      </div>
    </div>
  {{/if}}
</div>
