<div class="sign-in-form">
  <h3>{{t "login.title"}}</h3>

  <div class="row">
    <div class="col-md-9 col-center-block login-form-box">
      <div class="login-gooru" alt="Log in to your Gooru account" title="Log in to your Gooru account">Log in to your Gooru account</div>
      <br>
      <button type="button" class="connect-button" alt="Log in with Google" title="Log in with Google">Log in with Google</button>
      <div class="divider">
        <div class="divider-text" alt="Or" title="Or">Or</div>
      </div>
      <form {{action "authenticate" on="submit"}}>
          <div class="form-group">
            {{input
              id="signin_username"
              value=username
              placeholder=(t "login.usernameOrEmail")
              class="form-control text-box sign-in-username"}}
          </div>
          <div class="form-group">
            {{input
              id="signin_password"
              type="password"
              value=password
              placeholder=(t "login.password")
              class="form-control text-box sign-in-password"}}
          </div>
          <div class="form-group text-left">
              <a alt="{{t "login.forgotPassword"}}"
                 title="{{t "login.forgotPassword"}}">{{t "login.forgotPassword"}}</a>
          </div>
          <div class="form-group text-center">
              <button type="submit" class="btn btn-primary submit-sign-in">{{t "common.login"}}</button>
          </div>
          {{#if errorMessage}}
            <div class="form-group">
                <span class="text text-danger">{{errorMessage}}</span>
            </div>
          {{/if}}
      </form>
    </div>
  </div>
  <div class="row">
      <div class="col-md-12">
          <span class="sign-up-here">{{t "login.haveAccount"}} <a href="#">{{t "login.signUpHere"}}</a> </span>
      </div>
  </div>
</div>