<div class="search-panel">
  <div class="search-content">
    <div class="subjects-panel">
      <div class="left-panel-container">
        {{#unless (eq selectedFilterBy 'courses')}}
          <div class="category-standards">
            {{taxonomy.gru-taxonomy-selector
            isEditing=true
            onSubjectSelected="selectSubject"
            onCategorySelected="selectCategory"
            selectedCategory=selectedCategory
            selectedSubject=selectedSubject
            subjectLabelKey='common.subject-and-framework'
            onlySubjectsWithStandards=true
          }}
            {{#if selectedCourse}}
              {{taxonomy.gru-taxonomy-picker
              browseSelectorText=browseSelectorText
              onSave=(action 'updateSelectedTags')
              onSearchPath=(action 'loadTaxonomyData')
              panelHeaders=panelHeaders
              selected=taxonomyPickerData.selected
              selectedTextKey=selectedTextKey
              shortcuts=taxonomyPickerData.shortcuts
              shortcutText=(t "taxonomy.modals.gru-standard-picker.shortcutText")
              subject=taxonomyPickerData.subject
              isCompatiableMode=false
              isCallBack=true
              course=course
              domain=domain
            }}
            {{/if}}
          </div>
        {{/unless}}
        <div class="habits-panel"></div>
      </div>
      <div class="right-panel-container">
        <div class="audience-list-container">
          <div class="label-container" data-toggle="collapse" data-target="#audience">
            <span>{{t 'common.audience'}}</span>
            <div class="icons">
              <span>{{gru-icon name="arrow_drop_up"}}</span>
              <span>{{gru-icon name="arrow_drop_down"}}</span>
            </div>
          </div>
          <div class="audience-container collapse in" id="audience">
            {{#each audiences as |audience|}}
              <div class="audience-card ellipsis {{if (array-contains selectedFilters audience.name 'name') 'active-card'}}" {{action "onSelectAudience" audience}}><span>{{audience.name}}</span></div>
            {{/each}}
          </div>
        </div>
        <div class="language-list-container">
          <div class="label-container" data-toggle="collapse" data-target="#language">
            <span>{{t 'profile.preference.language'}}</span>
            <div class="icons">
              <span>{{gru-icon name="arrow_drop_up"}}</span>
              <span>{{gru-icon name="arrow_drop_down"}}</span>
            </div>
          </div>
          <div class="language-container collapse in" id="language">
            {{#each languages as |language|}}
              <div class="language-card ellipsis {{if (array-contains selectedFilters language.name 'name') 'active-card'}}" {{action "onSelectLanguage" language}}><span>{{language.name}}</span></div>
            {{/each}}
          </div>
        </div>
        <div class="author-publisher-list-container">
          <div class="label-container" data-toggle="collapse" data-target="#author">
            <span>{{t 'search-filter.authors' }} {{t 'search-result.and' }} {{t 'common.publishers' }}</span>
            <div class="icons">
              <span>{{gru-icon name="arrow_drop_up"}}</span>
              <span>{{gru-icon name="arrow_drop_down"}}</span>
            </div>
          </div>
          <div class="author-publisher-container collapse in" id="author">
            <div class="author-container">
              <span class="author-title">{{t 'search-filter.author.placeholder' }}</span>
              {{input type="text" value=authorName class="author-name" focus-out="setAuthor" placeholder="Type author name here..." autofocus="true"}}
            </div>
            <div class="publisher-container">
              <span class="publisher-title">{{t 'common.publisher' }}</span>
              {{input type="text" value=publisherName class="publisher-name" focus-out="setPublisher" placeholder="Type publisher name here..." autofocus="true"}}
            </div>
          </div>
        </div>
        <div class="educational-list-container">
          <div class="label-container" data-toggle="collapse" data-target="#educational">
            <span>{{t 'common.educational-use'}}</span>
            <div class="icons">
              <span>{{gru-icon name="arrow_drop_up"}}</span>
              <span>{{gru-icon name="arrow_drop_down"}}</span>
            </div>
          </div>
          <div class="educational-container collapse in" id="educational">
            {{#each educationalUses as |educationalUse|}}
              <div class="educational-card ellipsis {{if (array-contains selectedFilters educationalUse.name 'name') 'active-card'}}" {{action "onSelectEducational" educationalUse}}><span>{{educationalUse.name}}</span></div>
            {{/each}}
          </div>
        </div>
        {{#if (eq selectedFilterBy 'resources')}}
          <div class="resource-list-container">
            <div class="label-container" data-toggle="collapse" data-target="#resource">
              <span>{{t 'common.resource-types'}}</span>
              <div class="icons">
                <span>{{gru-icon name="arrow_drop_up"}}</span>
                <span>{{gru-icon name="arrow_drop_down"}}</span>
              </div>
            </div>
            <div class="resource-container collapse in" id="resource">
              {{#each resourceTypes as |resourceType|}}
                <div class="resource-card ellipsis {{if resourceType.active 'active-card'}}" {{action "onSelectResourceType" resourceType}}><span>{{resourceType.name}}</span></div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
