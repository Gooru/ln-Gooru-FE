<div class="header-panel" {{action 'closeNotificationList'}}>
  <div class="nav-body nav-menu-{{if selectedMenuItem selectedMenuItem 'default'}} {{if isPremiumClass 'premium-class'}}">
    <div class="app-close">
      {{#link-to 'teacher-home' class="navbar-brand home-link material-icons close" }}
        <i class="gru-icon material-icons close">close</i>
      {{/link-to}}
    </div>
    {{#unless class.isArchived}}
      <div class="atc tab">
        <a {{action 'selectItem' 'atc'}} class="atc-link" title="{{t 'teacher-landing.class.performance-overview'}}" role="tab" data-toggle="tooltip">
          <span class="atc-menu"></span>
          <span class="add-info">{{t 'teacher-landing.class.performance-overview'}}</span>
        </a>
      </div>

      <div class="students tab">
        <a {{action 'selectItem' 'students'}} role="tab" data-toggle="tooltip" title="{{t 'teacher-landing.class.student-locator' }}">
          {{gru-icon name='school'}}
          <span class="add-info">{{t 'teacher-landing.class.student-locator' }}</span>
        </a>
      </div>

      <div class="class-activities tab grade-range-{{grade-range performanceSummaryForDCA.performance.scoreInPercentage}} {{if (eq selectedMenuItem 'class-activities') 'vactive'}}">
        <a {{action 'selectItem' 'class-activities'}} class="dca" title="{{t 'teacher-landing.class.class-activities'}}" role="tab" data-toggle="tooltip">
          <span class="dca-pin"></span>
          <span class="add-info">{{t 'teacher-landing.class.class-activities'}}</span>
          <span class="performance-score {{if (not hasCAStarted) 'not-started'}}" {{action 'onOpenOCAReport'}}>{{if hasCAStarted (concat performanceSummaryForDCA.performance.scoreInPercentage '%') '--' }}</span>
        </a>
      </div>

      <div class="course-map tab grade-range-{{grade-range class.performanceSummary.score}} {{if (eq selectedMenuItem 'course-map') 'vactive'}}">
        <a {{action 'selectItem' 'course-map'}} role="tab" data-toggle="tooltip" title="{{t 'teacher-landing.class.learning-journey'}}">
          {{gru-icon name='sort'}}
          <span class="add-info">{{t 'teacher-landing.class.learning-journey'}}</span>
          <span class="performance-score {{if (not hasCMStarted) 'not-started'}}" {{action 'onOpenCourseReport'}}>{{if hasCMStarted (concat class.performanceSummary.score '%') '--' }}</span>
        </a>
      </div>

    {{/unless}}
    {{#if navTitle}}
      <div class="studyplayer-title">
        {{#if (and secondaryClasses.length  (not-eq selectedMenuItem 'class-management')  (not-eq selectedMenuItem 'class-activities'))}}
        <span class="nav-title" {{action 'toggleNavClass'}}>{{if selectedSecondaryClass.title selectedSecondaryClass.title navTitle}} {{gru-icon name="arrow_drop_down"}}</span>
        <div class="nav-class-drop-down">
          {{#each secondaryClasses as | secondaryClass|}}
           <span class="{{if (or (and (not isPrimaryClass) secondaryClass.isActive) (and isPrimaryClass secondaryClass.isPrimaryClass)) 'active' ''}}" {{action 'onChangeSecondaryClass' secondaryClass}} >{{secondaryClass.title}}</span>
          {{/each}}
        </div>
        {{else}}
          <div class="nav-title">{{navTitle}} {{#if (and (eq selectedMenuItem 'class-activities') secondaryClasses.length )}}
          <span title="{{t 'common.class-activities-info-icon'}}" data-toggle="tooltip" data-placement="bottom auto" data-trigger="hover">
            {{gru-icon name="info"}}</span>
          {{/if}}</div>
        {{/if}}
      </div>
    {{/if}}
    <div class="notification-tab">
      {{notification/notification-indicator displayNotificationList=displayNotificationList accessorClass='class' isTeacher=true classId=class.id }}
    </div>
    {{#if isPremiumClass}}
      <div class="performance-summary {{if (or (and class.competencyStats isPrimaryClass) (and secondaryClass.competencyStats (not isPrimaryClass))) 'has-competency-stats'}}" {{action 'selectItem' 'students'}}>
        {{#if (and class.competencyStats isPrimaryClass)}}
          <span class="numerator">{{class.competencyStats.completedCompetencies}}</span>
          <span class="denominator">{{class.competencyStats.totalCompetencies}}</span>
        {{else if (and secondaryClass.competencyStats (not isPrimaryClass))}}
          <span class="numerator">{{secondaryClass.competencyStats.completedCompetencies}}</span>
          <span class="denominator">{{secondaryClass.competencyStats.totalCompetencies}}</span>
        {{else}}
          <span class="no-completion-score">--</span>
        {{/if}}
      </div>
    {{/if}}
    <div class="class-management tab">
      <a {{action 'selectItem' 'class-management'}} role="tab" title="{{t 'teacher-landing.class.class-settings.class-settings-sec.class-settings-sec-head'}}" data-toggle="tooltip" data-placement="bottom auto" data-trigger="hover">
        {{gru-icon name="settings"}}
      </a>
    </div>
  </div>
</div>
