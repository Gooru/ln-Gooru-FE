<header class="app-header">
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
              {{#link-to 'index' class="navbar-brand home-link"}}  {{/link-to}}
            </div>
            <div class="navbar-form navbar-left search-navbar-form">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search for a topic" spellcheck="true">
                </div>
                <button type="button" class="btn btn-primary" alt="{{t "common.search"}}"
                        title="{{t "common.search"}}">{{t "common.search"}}</button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right menu-navbar">
                    <li>
                        <a href="#" class="navbar-link libraries-link">{{t "common.libraries"}}</a>
                    </li>
                    <li>
                        <a href="#" class="navbar-link my-classes-link">{{t "common.myClasses"}}</a>
                    </li>
                    <li>
                        <a href="#" class="navbar-link my-content-link">{{t "common.myContent"}}</a>
                    </li>
                    <li>
                      {{#link-to 'sign-in' class="navbar-link login-link"}} {{t "common.login"}} {{/link-to}}
                    </li>
                    <li>
                      {{#link-to 'sign-in' tagName='button' class="btn btn-primary navbar-btn sign-up-button"}} {{t "common.signUp"}} {{/link-to}}
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>


