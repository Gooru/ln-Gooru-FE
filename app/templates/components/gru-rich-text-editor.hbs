<div id="wysihtml-toolbar" class="btn-toolbar" role="toolbar">
    <button type="button" class="btn btn-math" data-wysihtml5-command="bold" title="{{t 'gru-rich-text-editor.bold'}}">
      <strong>B</strong>
    </button>
    <button type="button" class="btn btn-math" data-wysihtml5-command="italic" title="{{t 'gru-rich-text-editor.italic'}}">
      <i>I</i>
    </button>
    <button type="button" class="btn btn-math" data-wysihtml5-command="underline" title="{{t 'gru-rich-text-editor.underline'}}">
      <u>U</u>
    </button>
    <button type="button" class="btn btn-math" data-wysihtml5-command="superscript" title="{{t 'gru-rich-text-editor.superscript'}}">
      x<sup>2</sup>
    </button>
    <button type="button" class="btn btn-math" data-wysihtml5-command="subscript" title="{{t 'gru-rich-text-editor.subscript'}}">
      x<sub>2</sub>
    </button>
    <button type="button" class="btn  btn-math add-function {{if showExpressionsPanel 'active'}}" title="{{t 'gru-rich-text-editor.expression'}}" {{action 'toggleExpressionsPanel'}}>
      {{t 'gru-rich-text-editor.expressions-panel.select-expression'}}
    </button>
  <div class="expressions-panel {{if showExpressionsPanel 'show'}}">
    <div class="equation-editor">
        <div class="equation-wrapper">
            <span class="math-field"></span>
            <div class="actions">
              {{#if isEditingExpression}}
                  <button class="btn btn-primary" {{action 'updateExpression'}}>{{t 'gru-rich-text-editor.expressions-panel.update-expression'}}</button>
              {{else}}
                  <button class="btn btn-primary" {{action 'insertExpression'}}>{{t 'gru-rich-text-editor.expressions-panel.insert-expression'}}</button>
              {{/if}}
            </div>
        </div>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="layout">
                <div>
                    <a href="#" class="fraction" data-expression="fraction"></a>
                    <a href="#" data-expression="sqrt">square root</a>
                    <a href="#" data-expression="sqrtn">square root with magnitude</a>
                    <a href="#" data-expression="overline">overline</a>
                    <a href="#" data-expression="exists">exists</a>
                    <a href="#" data-expression="nexists">nexists</a>
                </div>
               <div>
                   <a href="#" data-expression="sum">sum</a>
                   <a href="#" data-expression="ge">greater or equal</a>
                   <a href="#" data-expression="gt">greater than</a>
                   <a href="#" data-expression="in">in</a>
                   <a href="#" data-expression="notin">notin</a>
               </div>
              <div>
                  <a href="#" data-expression="angles">angles</a>
                  <a href="#" data-expression="sin">sin()</a>
                  <a href="#" data-expression="cos">cos()</a>
                  <a href="#" data-expression="tan">tan()</a>
                  <a href="#" data-expression="lambda">lambda</a>
                  <a href="#" data-expression="omega">omega</a>
                  <a href="#" data-expression="alpha">alpha</a>
                  <a href="#" data-expression="infinity">infinity</a>
              </div>
            </div>
        </div>
    </div>
  </div>
</div>
<div id="wysihtml-editor" class="editor-box"></div>
