<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'common.close'}}" data-ember-action="587">
        <span aria-hidden="true">Ã—</span>
    </button>
    <h4 class="modal-title">Sign Up</h4>
</div>
<div class="modal-body">
  <div class="wrapper">
      <div class="main">
          <div class="intro">{{t "gru-user-sign-up.infoMessage"}}</div>
          <div class="content">

              <form {{action "signUp" on="submit"}}>
                  <div class="row">
                      <div class="col-xs-6">
                        {{input
                        id="username"
                        title=(t "gru-user-sign-up.usernameToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        value=username
                        placeholder=(t "gru-user-sign-up.username")
                        class="form-control"
                        }}
                      </div>
                    {{datepicker-field
                    onSelectDateAction="onSelectDateOfBirthAction"
                    placeholder=(t "gru-user-sign-up.dateOfBirth")
                    class="col-xs-5 pa-md-left-2 pa-md-right-2 pa-sm-left-2 pa-sm-right-2"}}
                      <div class="col-xs-1">
                          <div class="img-question" data-toggle="tooltip" data-placement="right" title={{t "gru-user-sign-up.birthdayToolTip"}}></div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-xs-6">
                        {{input
                        id="firstName"
                        title=(t "gru-user-sign-up.nameToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        value=firstName
                        placeholder=(t "gru-user-sign-up.firstName")
                        class="form-control"}}
                      </div>
                      <div class="col-xs-5 pa-md-left-2 pa-md-right-2 pa-sm-left-2 pa-sm-right-2">
                        {{input
                        id="lastName"
                        title=(t "gru-user-sign-up.nameToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        value=lastName
                        placeholder=(t "gru-user-sign-up.lastName")
                        class="form-control"
                        }}
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
                        {{input
                        id="email"
                        title=(t "gru-user-sign-up.emailToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        value=email
                        placeholder=(t "gru-user-sign-up.email")
                        class="form-control"
                        }}
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
                        {{input
                        id="password"
                        title=(t "gru-user-sign-up.passwordToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        type="password"
                        value=password
                        placeholder=(t "gru-user-sign-up.password")
                        class="form-control"
                        }}
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
                        {{input
                        id="rePassword"
                        title=(t "gru-user-sign-up.passwordToolTip")
                        data-toggle="tooltip"
                        data-placement="left"
                        type="password"
                        value=confirmedPassword
                        placeholder=(t "gru-user-sign-up.rePassword")
                        class="form-control"
                        }}
                      </div>
                  </div>

                {{role-radio-button onCheckRoleOptionAction="onCheckRoleOptionAction"}}

                  <div class="form-group text-center">
                      <button type="submit" class="btn btn-primary btn-sign-up">Sign Up</button>
                  </div>

                {{#if errorMessage}}
                    <div>
                        <strong>Sign Up failed:</strong> {{errorMessage}}
                    </div>
                {{/if}}
              </form>

          </div>
          <div class="accept-terms">
              <span class="gwt-InlineLabel" id="lblAgree" alt="By clicking Sign Up, I agree to the" title="By clicking Sign Up, I agree to the">By clicking Sign Up, I agree to the </span>
              <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle" id="lnkCopyRight" alt="Copyright Policy" title="Copyright Policy">Copyright Policy,</a>
              <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle" id="lnkTermsAndPrivacy" alt="Terms of Service" title="Terms of Service">Terms of Service</a>
              <span class="gwt-InlineLabel" id="spnAndText" alt="and" title="and">and </span>
              <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle" id="lnkPrivacy" alt="Privacy Policy." title="Privacy Policy.">Privacy Policy.</a>
          </div>
      </div>
  </div>
</div>
