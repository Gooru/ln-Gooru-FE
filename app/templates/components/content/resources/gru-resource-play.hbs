<header>
  <div class="header-content">
    <button type="button" class="btn-back" {{action "goBack"}}>
      {{gru-icon name="keyboard_arrow_left"}}  {{t 'common.back'}}
    </button>
    <div class="heading">
      <div class="information">
        <h1 title="{{{resource.title}}}">{{resource.title}}</h1>
        <div class="details">
          <div class="format">
            <i class="{{resource.format}}-icon"></i>
            <span>{{t (concat "common.resource-format." resource.format)}}</span>
          </div>
          <div class="tags">
            <span class="label"><span>3.OA.A.2</span> CCSS MATH</span>
            <span class="label"><span>3.OA.A.2</span> CCSS MATH</span>
            <span class="label"><span>3.OA.A.2</span> CCSS MATH</span>
            <span class="extra">+3</span>
          </div>
        </div>
      </div>
      <div class="publisher">
        <span>{{t 'common.published-by'}}</span>
        <img src="{{ resource.owner.avatarUrl }}" alt="Publisher">
          {{#link-to 'profile.content.courses' resource.owner.id class="pointer" tagName="span"}}
            {{resource.owner.displayName}}
          {{/link-to}}
      </div>
    </div>
  </div>
</header>

<section>
  {{component resourceComponent resource=playerResource calculatedResourceContentHeight=calculatedResourceContentHeight}}
</section>