<span>{{t "common.audience"}}</span>
{{#if isEditing}}
  <div class="dropdown">
    <button class="btn-primary dropdown-toggle btn-sm add-prefix"
            type="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      {{t "common.add"}}
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu audience">
      {{#each editAudiences as |audience|}}
        <li><label>{{input type="checkbox" checked=audience.checked}}<span>{{t audience.label}}</span></label></li>
      {{/each}}
    </ul>
    {{#each editAudiences as |audience|}}
      {{#if audience.checked}}
        <button type="button" class="btn-audience btn-info btn btn-sm">
          <span class="btn-label">{{t audience.label}}</span>
          <span class="remove-audience" {{action 'removeAudience' audience}}>{{gru-icon name="clear"}}</span>
        </button>
      {{/if}}
    {{/each}}
  </div>
{{else}}
  <div>
    {{#if srcSelectedAudiences.length}}

      {{#each srcAudiences as |audience|}}
        {{#if audience.checked}}
          <div class="btn-empty btn btn-sm">{{t audience.label}}</div>
        {{/if}}
      {{/each}}

  {{else}}
      <span>{{t "common.not-specified"}}</span>
  {{/if}}

  </div>
{{/if}}
