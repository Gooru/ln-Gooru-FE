<span class="audience-label">{{t "common.audience"}}</span>
{{#if isEditing}}
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle btn-sm" type="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          {{t "common.add-plus"}}
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu audience">
        {{#each audienceList as |audience|}}
            <li><label>{{input type="checkbox" checked=audience.checked}}<span>{{t audience.label}}</span></label></li>
        {{/each}}
        </ul>
      {{#each audienceList as |audience|}}
        {{#if audience.checked}}
          <button type="button" class="btn-audience btn-info btn btn-sm">{{t audience.label}}<span {{action 'removeAudience' audience}}>{{gru-icon name="clear"}}</span></button>
        {{/if}}
      {{/each}}
    </div>
{{else}}
  {{#if audienceChecked}}
      <div class="active-audience">
         {{#each audienceChecked as |audience|}}
             <button type="button" class="btn-empty btn btn-sm">{{t audience.label}}</button>
         {{/each}}
      </div>
  {{else}}
    <span class="empty">{{t "common.not-specified"}}</span>
  {{/if}}
{{/if}}
