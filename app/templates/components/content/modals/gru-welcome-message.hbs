<div class="modal-header">
  <a {{action 'close'}} data-dismiss="modal" class="material-icons">clear</a>
</div>
<div class="modal-body">

  <p class="title">{{t 'gru-welcome-message.title'}}</p>

  <div class="text">{{t 'gru-welcome-message.text-one'}}</div>

  <div class="text">
    <span>{{t 'gru-welcome-message.text-two.subtitle'}}</span>
    {{gru-icon name='directions'}}
    {{t 'gru-welcome-message.text-two.text'}}
  </div>

  <div class="text">
    <span>{{t 'gru-welcome-message.text-three.subtitle'}}</span>
    {{gru-icon name='help'}}
    {{t 'gru-welcome-message.text-three.text'}}
  </div>

  <div class="text">
    <span>{{t 'gru-welcome-message.text-four.subtitle'}}</span>
    {{gru-icon name='fiber_new'}}
    {{t 'gru-welcome-message.text-four.text'}}
  </div>

  <div class="last-text">
    <p>
      {{t 'gru-welcome-message.text-five'}}
      <span class="logo"></span>
    </p>
  </div>

  <div class="actions">

    <input id="dontShowAgain" type="checkbox"/>
    <label for="dontShowAgain">{{t 'gru-welcome-message.dont-show-again'}}</label>

    <button {{action 'close'}} class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
      <span aria-hidden="true">{{t 'common.close'}}</span>
    </button>
  </div>
</div>

