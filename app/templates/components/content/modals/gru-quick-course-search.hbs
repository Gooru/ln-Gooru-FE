<div class="modal-header">
  <span class="modal-title">{{t 'gru-quick-course-search.add-from-course'}}</span>
</div>
<div class="search-module">
  <span>Search placeholder</span>
</div>
<div class="modal-body">
  {{#each model.courses as |course|}}
    <div class="{{course.id}}" {{action "selectCourse" course.id}}>
        {{cards.gru-course-card course=course isOwner=true}}
    </div>
  {{/each}}
</div>
<div class="modal-footer">
  <div class="btn-group visible-xs">
    <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
        <span aria-hidden="true">{{t 'common.cancel'}}</span>
    </button>
    <button type="button" class="btn btn-primary assign"{{action "assignCourse"}}>{{t 'gru-quick-course-search.assign'}}</button>
  </div>
  <div class="hidden-xs">
    <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
        <span aria-hidden="true">{{t 'common.cancel'}}</span>
    </button>
    <button type="button" class="btn btn-primary assign" {{action "assignCourse"}}>{{t 'gru-quick-course-search.assign'}}</button>
  </div>

</div>
