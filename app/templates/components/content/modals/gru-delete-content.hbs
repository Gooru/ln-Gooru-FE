<div class="modal-header delete">
  <h4 class="modal-title">{{t "common.delete"}} {{t (concat 'common.' model.type)}}</h4>
</div>
<div class="modal-body">
  <form {{action "deleteContent" model on="submit"}}>
    <p class="legend">{{t "content.modals.delete-content.legend"}}
        <b>
          {{#if model.parentName}}
            <span>{{t "content.modals.delete-content.content-legend" type=model.type index=(plus-one model.index) title=model.content.title parentName=model.parentName}}</span>
          {{else}}
            {{model.content.title}}
          {{/if}}
        </b></p>
    <div class="delete-info">
      <ul>
        <li>
          <label>
            {{input type="checkbox" checked=validator.check1}}
            <span>{{t "content.modals.delete-content.delete-instructions.links-inaccessible"}}</span>
          </label>
        </li>
        <li>
          <label>
            {{input type="checkbox" checked=validator.check2}}
            <span>{{t "content.modals.delete-content.delete-instructions.content-inaccessible"}}</span>
          </label>
        </li>
        <li>
          <label>
            {{input type="checkbox" checked=validator.check3}}
            <span>{{t "content.modals.delete-content.delete-warning" type=(t (concat 'common.' model.type))}}</span>
          </label>
        </li>
      </ul>
    </div>
    <p class="confirmation">{{t "content.modals.delete-content.confirmation"}}</p>
    {{input class="delete-input" value=validator.confirm}}
    <div class="actions delete">
      <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
        <span aria-hidden="true">{{t 'common.cancel'}}</span>
      </button>
      <button type="submit" class="btn btn-warning delete" disabled={{isDisabled}}>{{t 'common.delete'}}</button>
    </div>

  </form>
</div>

