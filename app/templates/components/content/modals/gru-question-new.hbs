<div class="modal-header">
    <h4 class="modal-title">{{t "common.add-new-question"}}</h4>
</div>
<div class="modal-body">
    <form {{action "createQuestion" on="submit"}}>
        <label class="type">
            <span class="required">{{t 'common.add-type-question'}}</span>
        </label>
        <div class="question-types text-center">
          {{#each questionTypes as |questionType|}}
              <div class="panel panel-default {{if (eq questionType 'T/F') 'question-type-T_F' (concat 'question-type-' questionType)}} {{set-if-equal 'active' questionType selectedType}}" {{action 'selectType' questionType}}>
                  <div class="panel-body">
                      <i class="question-type-icon"></i>
                  </div>
                  <div class="panel-footer">
                    {{t (concat 'common.question-type.' questionType) }}
                  </div>
              </div>
          {{/each}}
        </div>
        <div class="actions question-new">
            <button type="button" class="btn btn-default cancel" data-dismiss="modal" aria-label="{{t 'common.close'}}">
                <span aria-hidden="true">{{t 'common.cancel'}}</span>
            </button>
            <button type="submit" class="btn btn-primary add">{{t 'common.create'}}</button>
        </div>
    </form>
</div>
