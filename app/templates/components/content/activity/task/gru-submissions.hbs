<div class="panel-default">
    <div class="panel-heading">
        <h3> Task Submissions</h3>
    </div>
    <div class="panel panel-body">
        {{#each submissions as |submission|}}
            {{content.activity.task.submission.gru-submission-line-item submission=submission  removeLineItem=(action 'removeLineItem')}}
        {{/each}}
        {{content.activity.task.submission.gru-submission-edit oaId=oaId oaTaskId=oaTaskId updateParent=(action 'updateSubmissionCollection') }}
    </div>
</div>