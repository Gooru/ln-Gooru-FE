<div class="panel panel-default">
    {{!-- <div class="panel-heading"> --}}
    {{!-- hiding header as it creates extra border --}}
    <a role="button" data-toggle="collapse" data-parent="#accordion" {{action 'expandTitle' }} id="#head-{{model.id}}" href="#m-{{model.id}}" aria-expanded="true" aria-controls="m-{{model.id}}">
        <div class="associated-rubric {{if isExpanded 'hidden' 'expanded' }}">
            <div class="image">
                <i class="rubric-icon"></i>
            </div>
            <div class="info">
                <h3>{{model.title}} </h3>
                <span class="submissionCount"> Submissions : {{model.oaTaskSubmissions.length}}</span>
            </div>
            {{!-- {{task.description}} --}}
            <div class="actions">
                <button class="btn no-bgd remove-item" {{action 'removeLineItem'}}>
                    {{gru-icon name="remove_circle"}}
                </button>
            </div>
        </div>
    </a>
    {{!-- </div> --}}
    <div id="m-{{model.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="#head-{{model.id}}">
        <div class="panel-body">
            <div class='expandedTitle'>
                <div class='actions'>
                    <button class="cancel btn btn-info" {{action 'cancel'}}>{{t "common.cancel"}}</button>
                    <button class="save btn btn-success" {{action 'updateContent' model}}>{{t "common.save"}}</button>
                </div>
                {{!-- <button {{action 'updateContent'}}>Save</button>
        <button>Cancel </button> --}}
                <span>Title</span>
                {{validation.gru-input model=model valuePath='title' maxLength=50 didValidate=true}}
            </div>
            {{!-- {{partial 'content/partials/information-actions'}} --}}
            <span>Description</span>
            {{gru-rich-text-editor content=model.description model=model valuePath='description'}}
            {{!-- {{validation.gru-input model=model valuePath='description' maxLength=50 didValidate=true}} --}}
            {{#if model.id}}
                {{content.activity.task.gru-submissions submissions=model.oaTaskSubmissions oaId=oaId oaTaskId=model.id }}
            {{/if}}
            {{!-- updateParent=(action 'updateParent') --}}
        </div>
    </div>
</div>