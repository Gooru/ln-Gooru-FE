{{content.gru-header options=options selected=selected headerActions=headerActions title=headerTitle}}

{{#if (eq selected 'information')}}
    <section id="information">
        <div class="header">
            <h2>{{t 'common.information'}}</h2>
        </div>
        <div class="content">
          {{content.gru-image isEditing=true}}
            <div class="panel panel-default information">
                <div class="panel-body">
                    <div class="title">
                        <label>
                            <span class="required">{{t "common.rubric-title"}}</span>
                          {{validation.gru-input model=assessment valuePath='title' maxLength=50}}
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/if}}
{{#if (eq selected 'rubric')}}
    <section id="rubric">
        <div class="header">
            <h2>{{t 'common.rubric'}}</h2>
        </div>
        <div class="panel panel-default rubric-creation">
            <div class="panel-heading">
                <div class="border-bottom">
                    <h3>{{t 'gru-rubric-edit.upload-rubric'}}</h3>
                </div>
            </div>
            <div class="panel-body">
              {{content.rubric.gru-rubric-creation rubric=rubric}}
            </div>
        </div>
        <div class="panel panel-default overall-score">
            <div class="panel-heading">
                <div>
                    <h3>{{t 'gru-rubric-creation.overall-narrative'}}</h3>
                </div>
            </div>
            <div class="panel-body">
                <div class="feedback">
                    <label>
                        <span>{{t "gru-rubric-creation.feedback-guidance"}}</span>
                      {{validation.gru-textarea rawTextareaValue=rubric.feedback model=rubric valuePath='feedback' maxLength=500 rows=5 placeholder=(t 'gru-rubric-creation.feedback-guidance-placeholder')}}
                    </label>
                </div>
                <label class="required-feedback">
                  <span {{action 'setFeedBack'}}>
                    {{#if rubric.requiresFeedback}}
                      {{gru-icon name='check_box'}}
                    {{else}}
                      {{gru-icon name='check_box_outline_blank'}}
                    {{/if}}
                  </span>
                  {{t 'gru-rubric-creation.required-feedback'}}
                </label>
            </div>
        </div>
        <div class="category-panel">
          {{#each categories as |category index|}}
            {{content.rubric.gru-category category=category index=index onCopyCategory='copyCategory' onDeleteCategory='deleteCategory'}}
          {{/each}}
            <a class="add-prefix add-category" {{action 'addNewCategory'}}>{{t "gru-rubric-creation.add-category"}}</a>
        </div>
    </section>
{{/if}}
{{content.rubric.gru-fixed-footer footerActions=footerActions}}
