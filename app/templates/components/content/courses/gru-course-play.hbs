<header>
  <h1>{{course.title}}</h1>

  <div class="actions">
    <button class="btn btn-default share btn-icon">{{gru-icon name="insert_link"}}</button>
    <button class="btn btn-default remix">{{t "common.remix"}}</button>
    {{#if isOwner}}
      <button class="btn btn-default edit">{{t "common.edit"}}</button>
    {{/if}}
    <button class="btn btn-default play btn-success">{{t "common.play"}}</button>
  </div>

  <nav class="hidden-md hidden-lg">
    <a href="#" {{action 'view' 'content-view'}} class="{{if (eq view 'content-view') 'selected' ''}}">{{t "common.content"}}</a>
    <a href="#" {{action 'view' 'information-view'}} class="{{if (eq view 'information-view') 'selected' ''}}">{{t "common.information"}}</a>
  </nav>

</header>

<section id="information">
  <div class="content">

    {{content.gru-image isEditing=isEditing srcImage=course.thumbnailUrl editImage=tempCourse.thumbnailUrl}}

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="description">
          {{#if course.description}}
            <p>{{course.description}}</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <hr class="hidden-sm">

  <div class="panel panel-default aside hidden-md hidden-lg">
    <div class="panel-body">

      {{partial 'content/partials/course-information'}}

    </div>
  </div>

</section>

<section id="content">
  {{content.courses.play.gru-accordion-course
  model=course
  items=course.children }}
</section>
