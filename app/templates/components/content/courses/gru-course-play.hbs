{{content.courses.gru-course-play-header course=course}}

<section id="viewDetails" class="align-center details {{if viewCourseDetails 'hidden' 'visible'}}">
  <a href="#" {{action 'viewDetails'}}>
    <span>{{t "gru-course-play.view-course-details"}}</span>
    {{gru-icon name='keyboard_arrow_down'}}
  </a>
</section>

<section id="information" class="{{if viewCourseDetails 'visible' 'hidden'}}">
  <div class="content">

    {{content.gru-image isEditing=isEditing srcImage=course.thumbnailUrl editImage=tempCourse.thumbnailUrl}}

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="tags">
          {{taxonomy.gru-taxonomy-tag-list tags=tags tagsVisible=2}}
        </div>
        <div class="description">
          {{#if course.description}}
            <p>{{course.description}}</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default aside">
    <div class="panel-body">
      {{partial 'content/partials/course-information'}}
    </div>
  </div>

  <div class="align-center details">
    <a href="#" {{action 'viewDetails'}}>
      <span>{{t "gru-course-play.hide-course-details"}}</span>
      {{gru-icon name='keyboard_arrow_up'}}
    </a>
  </div>

</section>

<section id="content">
  {{content.courses.play.gru-accordion-course
  model=course
  items=course.children
  selectedLessonId=selectedLessonId
  onLocationChange='setLocation'
  }}
</section>
