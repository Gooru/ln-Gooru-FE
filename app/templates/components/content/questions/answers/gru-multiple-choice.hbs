{{#each answersList as |answer index|}}
<div class="panel panel-default multiple-choice">
    <div class="answer-content">
        <div class="letter-container">
            <h3>{{answer-letter index}}</h3>
        </div>
      <div class="text-area-container">
        {{textarea valuePath='text' rows=2 maxlength=200}}
      </div>
        <span class="delete" {{action 'removeChoice' answer}}>{{gru-icon name="delete"}}</span>
        <div class="check {{if answer.isCorrect 'correct'}}" {{action 'setCorrect' answer}}>
            {{gru-icon name="done"}}
        </div>
    </div>
</div>
{{/each}}
<div class="panel panel-default add-answer text-center" {{action 'addNewChoice'}}>
    <span>{{t 'content.questions.edit.builder.add-answer-choice'}}</span>
</div>