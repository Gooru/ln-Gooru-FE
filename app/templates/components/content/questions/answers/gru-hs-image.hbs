{{#each answers as |answer index|}}
    <div class="hs-container">
        <div class="letter-container">
            <h3>{{answer-letter index}}</h3>
        </div>
      <div class="panel panel-default">
          {{content.gru-image isEditing=editMode srcImage=answer.text editImage=tempAnswer.text}}
          {{#if editMode}}
            <div class="panel-footer">
                <button>{{gru-icon name="delete"}}</button>
                <button>{{gru-icon name="check"}}</button>
            </div>
          {{/if}}
      </div>
    </div>
{{/each}}
{{#if editMode}}
  {{#unless hasLimitAnswers}}
      <div class="add-answer">
          <a {{action 'addNewChoice'}}>{{t 'content.questions.edit.builder.add-answer-choice'}}</a>
      </div>
  {{/unless}}
{{/if}}
