{{#each answers as |answer index|}}

  {{#if editMode}}
    <div class="text-area-container">
      {{validation.gru-textarea  model=answer valuePath='text' rows=5 maxLength=200}}
    </div>

  {{else}}
    <span class="answer-text">
      {{textarea value=answer.text rows=5 readonly=true }}
    </span>
  {{/if}}

{{/each}}
