<div class="panel-heading">
  <div class="icon-container pull-left">
    <img src="{{item.thumbnailUrl}}">
  </div>
  <div class="title-container pull-left">
    <div class="title ellipsis">{{item.title}}</div>
  </div>
  <div class="info pull-right">
    <div class="content-count">
      {{#if item.isAssessment}}
        {{#if item.questionCount}}
          <span data-toggle="tooltip" data-html="true" data-placement="top" title="{{t "common.questions"}}">{{gru-icon name='help_outline'}}</span>
          <span>{{item.questionCount}}</span>
        {{/if}}
      {{else}}
        {{#if (or item.questionCount item.resourceCount)}}
          {{#if item.resourceCount}}
            <span data-toggle="tooltip" data-html="true" data-placement="top" title="{{t "common.resources"}}">{{gru-icon name='local_library'}}</span>
            <span>{{item.resourceCount}}</span>
          {{/if}}
          {{#if item.questionCount}}
            <span data-toggle="tooltip" data-html="true" data-placement="top" title="{{t "common.questions"}}">{{gru-icon name='help_outline'}}</span>
            <span>{{item.questionCount}}</span>
          {{/if}}
        {{/if}}
      {{/if}}
    </div>
    <div class="play-btn">
      {{#if visible}}
        {{#if classActivity.context.courseId}}
          {{#link-to 'context-player'
           class.id
           classActivity.context.courseId
           classActivity.context.unitId
           classActivity.context.lessonId
           item.id
           (query-params
             type=item.collectionType
             role='student'
             source=source
             tenantId=session.tenantId
             partnerId=session.partnerId
           )
           tagName="button"
           class="btn btn-info study-now"}}
            {{gru-icon name='play_arrow'}}
          {{/link-to}}
        {{else}}
          {{#link-to 'player'
            item.id
            (query-params
             classId=class.id
             type=item.collectionType
             role='student'
             source=source
             tenantId=session.tenantId
             partnerId=session.partnerId
            )
            tagName="button"
            class="btn btn-info study-now"}}
              {{gru-icon name='play_arrow'}}
          {{/link-to}}
        {{/if}}
      {{else}}
        {{gru-icon name='play_arrow'}}
      {{/if}}
    </div>
    <div class="performance">
      {{#if item.isAssessment}}
        <span class="score" style={{safe-html (concat "color:" (grade-color (if collectionPerformanceSummary.score collectionPerformanceSummary.score 'NA')))}}>
          {{if collectionPerformanceSummary.score (concat collectionPerformanceSummary.score '%') '--'}}
        </span>
      {{else}}
        <span class="time-spent">
          {{if collectionPerformanceSummary.timeSpent (format-time collectionPerformanceSummary.timeSpent) '--'}}
        </span>
      {{/if}}
    </div>
  </div>
</div>