<div class="xs-design hidden-md hidden-lg">
    <div class="class-info">
        <div class="class-name">
            <h4>{{class.name}}</h4>
        </div>
        <div class="navigation-active">
            <div class="greetings">
                <button data-toggle="collapse" data-target=".description" aria-expanded="false" aria-controls="description"{{action 'showDescription'}}>{{material-design-icon name='textsms'}}</button>
            </div>
            <div class="btn-group drop-menu">
                <button class="btn dropdown-toggle" data-toggle="dropdown">{{material-design-icon name=iconClassMenuItem}}{{material-design-icon name='keyboard-arrow-down'}}</button>
                <ul class="dropdown-menu">
                    <li class="class-menu-item close"> <button class="btn dropdown-toggle" data-toggle="dropdown">{{material-design-icon name='close'}}</button></li>
                    <li class="class-menu-item overview" {{action 'selectItem' 'overview'}}>
                        <h6>{{t "class.gru-class-navigation.overview"}}</h6>{{material-design-icon name='dashboard'}}
                    </li>
                    <li class="class-menu-item analytics performance" {{action 'selectItem' 'analytics.performance'}}>
                        <h6>{{t "class.gru-class-navigation.analytics"}}</h6>{{material-design-icon name='graphic-eq'}}
                    </li>
                    <li class="class-menu-item suggestions" {{action 'selectItem' 'suggestions'}}>
                        <h6>{{t "class.gru-class-navigation.suggestions"}}</h6>{{material-design-icon name='chat'}}
                    </li>
                    <li class="class-menu-item info" {{action 'selectItem' 'info'}}>
                        <h6>{{t "class.gru-class-navigation.information"}}</h6>{{material-design-icon name='info'}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="description collapse">
      {{class.description}}
    </div>
    <div class="class-details">
        <div class="active-dates">
          <span>{{formatDate class.startDate 'MMMM DD, YYYY'}} - {{formatDate class.endDate 'MMMM DD, YYYY'}}</span>
        </div>
        <div class="members">{{material-design-icon name='group'}}{{class.totalMembers}}</div>
    </div>
</div>
<div class="md-design hidden-xs hidden-sm">
  <div class="class-info">
    <h4>{{class.name}}</h4>
    <div class="active-dates">
        <ul>
            <li>{{formatDate class.startDate 'MMMM DD, YYYY'}}</li>
            <li>{{formatDate class.endDate 'MMMM DD, YYYY'}}</li>
        </ul>
     </div>
    <div class="members">
      <p class="lead">{{class.totalMembers}} {{t "class.gru-class-navigation.members"}}</p>
    </div>
    <div class="greetings">
      <p class="lead">{{t "class.gru-class-navigation.greetings"}}</p>
    </div>
    <div class="greetings-description">
      <p>{{class.greetings}}</p>
    </div>
  </div>
  <div class="class-menu">
    <ul class="list-group">
      <li class="list-group-item class-menu-item overview" {{action 'selectItem' 'overview'}}><h6>{{t "class.gru-class-navigation.overview"}}</h6>{{material-design-icon name='dashboard'}}</li>
      <li class="list-group-item class-menu-item analytics performance" {{action 'selectItem' 'analytics.performance'}}><h6>{{t "class.gru-class-navigation.analytics"}}</h6>{{material-design-icon name='graphic-eq'}}</li>
      <li class="list-group-item class-menu-item suggestions" {{action 'selectItem' 'suggestions'}}><h6>{{t "class.gru-class-navigation.suggestions"}}</h6>{{material-design-icon name='chat'}}</li>
      <li class="list-group-item class-menu-item info" {{action 'selectItem' 'info'}}><h6>{{t "class.gru-class-navigation.information"}}</h6>{{material-design-icon name='info'}}</li>
    </ul>
  </div>
</div>