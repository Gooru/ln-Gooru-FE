<table class="table table-bordered">
  <thead>
    <tr>
      <td class="scroll"></td>
      <th class="header sticky-col" colspan="3" scope="col">
        {{t "class.analytics.performance.teacher.metricsTable.average"}}
      </th>
      {{#each headers as |header|}}
        <th id="{{{header.id}}}" colspan="3" class="header scroll" scope="col">
          {{{header.title}}}
        </th>
      {{/each}}
    </tr>
    <tr>
      <th class="header" scope="row">
        {{t "class.analytics.performance.teacher.metricsTable.average"}}
      </th>
      <th class="good " scope="col">
        70%
      </th>
      <th class="bad " scope="col">
        10%
      </th>
      <th class="very-good " scope="col">
        80%
      </th>
      <th class="very-good scroll" scope="col">
        90%
      </th>
    </tr>
    <tr class="sub-header hidden-xs">
      <th class="sticky-col">
        Name <span class="fa fa-sort-down"></span>
      </th>
      <th>
        Name <span class="fa fa-sort-down"></span>
      </th>
      <th>
        Name <span class="fa fa-sort-down"></span>
      </th>
      <th>
        Name <span class="fa fa-sort-down"></span>
      </th>
      <th class="scroll">
        Name <span class="fa fa-sort-down"></span>
      </th>
    </tr>
  </thead>
  <tbody>

    {{#each performanceData as |userPerformance|}}
      <tr>
        <th class="header user-info sticky-col" scope="row">
          {{{userPerformance.user}}}
        </th>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
        {{#each userPerformance.performanceData as |data|}}
          {{#if data}}
            <td class="good scroll">
              {{{data.score}}}%
            </td>
            <td class="scroll">
              {{{data.completionDone}}}/{{{data.completionTotal}}}
            </td>
            <td class="scroll">
              {{{data.timeSpent}}}
            </td>
          {{else}}
            <td class="scroll">
            </td>
            <td class="scroll">
            </td>
            <td class="scroll">
            </td>
          {{/if}}
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>