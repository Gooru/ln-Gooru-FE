{{#each metrics as |metric|}}
  <th class="metrics-sub-header">
      <a class="metric-sub-header {{metric.value}}" {{action 'sort' metric}}>
        {{t (concat 'gru-metrics-sub-header.' metric.value) }}
        {{#if metric.sorted}}
          {{#if metric.isAsc}}
              <span>{{fa-icon icon='sort-asc'}}</span>
          {{else}}
              <span>{{fa-icon icon='sort-desc'}}</span>
          {{/if}}
        {{else}}
            <span>{{fa-icon icon='sort'}}</span>
        {{/if}}
      </a>
  </th>
{{/each}}
