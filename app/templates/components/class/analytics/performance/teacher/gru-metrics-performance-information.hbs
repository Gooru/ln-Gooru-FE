{{#if performanceData}}
  {{#if showScore}}
    <div class="table-cell">
        {{#if performanceData.hideScore}}
            <div class="not-applicable"
                 title="{{performanceData.headerTitle}}" data-toggle="tooltip" data-placement="auto">
              {{t 'common.not-applicable'}}
            </div>
        {{else}}
          <div class="box score {{if performanceData.headerTitle 'pointer'}}"
               title="{{performanceData.headerTitle}}" data-toggle="tooltip" data-placement="auto"
               style={{safe-html (concat "background-color:" (grade-color (if performanceData.hasStarted performanceData.score 'NA'))) }}>
            {{{if (and performanceData.hasStarted performanceData.hasScore) performanceData.score '--'}}}%
          </div>
        {{/if}}
    </div>
  {{/if}}
  {{#if showReport}}
      <div class="table-cell report pointer">
          <span {{action 'clickReport' performanceData}}>{{gru-icon name='library_books'}}</span>
      </div>
  {{/if}}
  {{#if showCompletion}}
    <div class="table-cell">
      {{ charts/gru-completion-chart
      completed=performanceData.completionDone
      total=performanceData.completionTotal }}
  </div>
  {{/if}}
  {{#if showStudyTime}}
    <div class="table-cell study-time">{{{performanceData.timeSpent}}}</div>
  {{/if}}
{{else}}
  {{#if showScore}}
      <div class="table-cell score"></div>
  {{/if}}
  {{#if showReport}}
      <div class="table-cell report"></div>
  {{/if}}
  {{#if showCompletion}}
    <div class="table-cell completion"></div>
  {{/if}}
  {{#if showStudyTime}}
    <div class="table-cell study-time"></div>
  {{/if}}
{{/if}}
