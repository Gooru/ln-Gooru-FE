<li class="title {{if performance.isUnitOrLesson "unit-lesson" "collection-assessment"}}">
    <span class="truncate" class={{if isSelected "selected" ""}}>
      {{#if performance.isUnitOrLesson}}{{gru-icon name=(if isSelected "keyboard_arrow_down" "keyboard_arrow_right")}}{{/if}}
      {{course-sections-prefix  index=index type=performance.type longName=false}}&colon;     {{performance.title}}
    </span>
  {{#if performance.isCollectionOrAssessment}}
      <div class="hidden-xs">
        {{#if collection.isCompleted}}
            <button class="btn btn-sm btn-default collection-redo-button">{{t "gru-performance-summary.redo"}}</button>
            <button class="btn btn-sm btn-default collection-view-report-button">{{t "gru-performance-summary.view-report"}}</button>
        {{else}}
            <button class="btn btn-sm btn-default collection-study-button" {{action "selectResource" collection.id}}>{{t "gru-performance-summary.study"}}</button>
        {{/if}}
      </div>
  {{/if}}
</li>
<li class='score'>
        {{#if performance.hasStarted}}
          {{#if performance.score}}
              <span class="score-box" style="background-color: {{ gradeColor performance.score }}">{{performance.score}}%</span>
          {{else}}
            <p>{{t "gru-performance-summary.not-applicable"}}</p>
          {{/if}}
        {{else}}
          <span class="not-started">{{t "gru-performance-summary.not-started"}}</span>
        {{/if}}
    </li>
    <li class="completion">
    {{#if performance.isCollectionOrAssessment}}
      <div class="collection-or-assessment">
        {{#if performance.hasStarted}}
          {{#if performance.isCompleted}}
              <span class="collection-or-assessment-is-completed"><i class="fa fa-2x fa-check-circle-o"></i></span>
              <span class="visible-xs">{{t "gru-performance-summary.redo"}}</span>
          {{else}}
              <span class="collection-or-assessment-has-started"><i class="fa fa-2x fa-check-circle-o"></i></span>
              <a class="visible-xs " {{action "selectResource" performance.id}}>{{t "gru-performance-summary.resume"}}</a>
          {{/if}}
        {{else}}
            <span class="visible-xs collection-or-assessment-not-started"><i class="fa fa-2x fa-check-circle-o"></i></span>
            <a class="visible-xs" {{action "selectResource" performance.id}}>{{t "gru-performance-summary.study"}}</a>
        {{/if}}
      </div>
    {{else}}
      {{#if performance.hasStarted}}

        {{#if performance.isCompleted}}
            <span class="performanceCheckmark isCompleted"></span>
        {{else}}
            <div class="description">
                <div class="radial-progress">
                    <div class="circle">
                        <div class="mask full">
                            <div class="fill"></div>
                        </div>
                        <div class="mask half">
                            <div class="fill"></div>
                            <div class="fill fix"></div>
                        </div>
                    </div>
                </div>
                <p>{{performance.completionDone}}/{{performance.completionTotal}}</p>
            </div>
        {{/if}}
      {{/if}}
    {{/if}}
    </li>
    <li class="timeSpent">
        {{#if performance.hasStarted}}
        <p>
          {{performance.displayableTimeSpent}}
        </p>
        {{/if}}
    </li>
    <li class="reaction">
    {{#if performance.hasStarted}}
      {{#if performance.reaction}}
          <span class="reactionSummary"></span>
      {{else}}
          <p>{{if performance.isUnitOrLesson '–'}}</p>
      {{/if}}
    {{/if}}
    </li>
    <li class="attempts">
    {{#if performance.hasStarted}}
      {{#if performance.attempts}}
          <p>{{performance.attempts}}</p>
      {{else}}
          <p>{{if performance.isUnitOrLesson '–'}}</p>
      {{/if}}
    {{/if}}
    </li>
