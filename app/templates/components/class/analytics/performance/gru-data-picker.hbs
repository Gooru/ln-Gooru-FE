<div class="option-picker">
  <ul class="list-inline">
    {{#each options as |option|}}
      <li>
        <div class="checkbox {{option.value}}">
            {{#if option.selected}}
              <input type="checkbox" disabled={{option.readOnly}} value="{{option.value}}" checked {{action 'setOption' option}}/>
            {{else}}
              <input type="checkbox" disabled={{option.readOnly}} value="{{option.value}}" {{action 'setOption' option}}/>
            {{/if}}
            <label>{{t (concat 'gru-data-picker.' option.value) }}</label>
        </div>
      </li>
    {{/each}}
  </ul>
</div>