<div class="header-panel" {{action 'closeNotificationList'}}>
  <div class="nav-body nav-menu-{{if selectedMenuItem selectedMenuItem 'default'}} {{if isPremiumClass 'premium-class'}} {{if isILActivity  'independent-learning'}}  {{unless hasClassInfo 'no-class-info'}}">
    <div class="app-close" {{action "onCloseStudyClassPlayer"}}>
      <a class="back-or-close-menu">
        {{gru-icon name=(if isStudyPlayer 'arrow_back' 'close')}}
      </a>
    </div>
    {{#unless isILActivity}}
      <div class="class-activities tab grade-range-{{grade-range caPerformanceSummary.scoreInPercentage}} {{if (eq selectedMenuItem 'class-activities') 'vactive'}}">
        <a class="tab-menu" title="{{t 'teacher-landing.class.class-activities'}}" role="tab" data-toggle="tooltip">
          <span class="class-activity-tab" {{action 'selectItem' 'class-activities'}}>
            <i class="dca-pin"></i>
            <span class="add-info dca-text">{{t 'teacher-landing.class.class-activities'}}</span>
          </span>
          <span class="performance-score {{if (not hasCAStarted) 'not-started'}}" {{action 'onOpenCAReport'}}>{{if hasCAStarted (concat caPerformanceSummary.scoreInPercentage '%') '--' }}</span>
        </a>
      </div>
    {{/unless}}
    <div class="course-map study-player tab grade-range-{{grade-range cmPerformanceSummary.score}} {{destination}} {{if isPremiumCourse 'premium-course'}} {{if (or (eq selectedMenuItem 'course-map') (eq selectedMenuItem 'study-player')) 'vactive'}}">
      <a class="tab-menu" role="tab" data-toggle="tooltip" title="{{t 'teacher-landing.class.course-map'}}">
        <span class="course-map-tab" {{action 'selectItem' 'course-map'}}>
          {{gru-icon name='sort'}}
          <span class="add-info">{{t 'teacher-landing.class.course-map'}}</span>
        </span>
        <span class="performance-score {{if (not hasCMStarted) 'not-started'}}" {{action 'openCourseReport'}}>{{if hasCMStarted (concat cmPerformanceSummary.score '%') '--' }}</span>
      </a>
    </div>
    {{#unless isILActivity}}
      <div class="tab profile-prof ">
        <a {{action 'selectItem' 'profile-prof'}} class="tab-menu" role="tab" data-toggle="tooltip" title="{{t 'student-landing.class.my-proficiency'}}">
          {{gru-icon name='school'}}
          <span class="add-info">{{t 'student-landing.class.my-proficiency'}}</span>
        </a>
      </div>
    {{/unless}}
    <div class="studyplayer-title">
      <span>{{navTitle}}</span>
    </div>
    {{#if class}}
      <div class="suggestion-tab">
        <div class="suggestion-explore" {{action 'toogleSuggestionContainer'}}>
          {{gru-icon name="explore"}}
        </div>
        {{#if showSuggestionContainer}}
          {{student-suggestion-container classId=classId courseId=courseId onCloseContainer='toogleSuggestionContainer'}}
        {{/if}}
      </div>
    {{/if}}
    <div class="notification-tab">
      {{notification/notification-indicator displayNotificationList=displayNotificationList accessorClass='class' classId=classId isTeacher=false }}
    </div>

    {{#if isPremiumClass}}
      <div class="performance-summary {{if competencyCompletionStats 'has-competency-stats'}}" {{action 'selectItem' 'profile-prof'}}>
        {{#if competencyCompletionStats}}
          <span class="numerator">{{competencyCompletionStats.completedCompetencies}}</span>
          <span class="denominator">{{competencyCompletionStats.totalCompetencies}}</span>
        {{else}}
          <span class="no-completion-score">--</span>
        {{/if}}
      </div>
    {{/if}}
    {{#if hasClassInfo}}
      <div class="class-info">
        <a {{action 'selectItem' 'class-info'}} role="tab" data-toggle="tooltip" title="{{t 'teacher-landing.class.class-management-tab.class-information'}}">
          {{gru-icon name="info" style='material-icons-outlined'}}
        </a>
      </div>
    {{/if}}
  </div>
</div>
