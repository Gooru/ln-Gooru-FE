<div class="panel panel-default">
  <div class="panel-heading">
    <div class="image">
      <img class="img-responsive" src="{{content.image}}">
    </div>
    <div class="library-info">
      <div class="title-section">
        {{#link-to 'partner-library.content' content.id class="title" alt="{{content.name}}"}} {{truncate text=content.name maxLength=40}} {{/link-to}}
      </div>
      <p class="counts-info">
        <span class="item total-courses">{{t "library.gru-partner-library-card.course" count=content.courseCount}}</span>
        <span class="bar">|</span>
        <span class="item total-collections">{{t "library.gru-partner-library-card.collection" count=content.collectionCount}}</span>
        <span class="bar">|</span>
        <span class="item total-assessments">{{t "library.gru-partner-library-card.assessment" count=content.assessmentCount}}</span>
      </p>
      <p class="counts-info">
        <span class="item total-resources">{{t "library.gru-partner-library-card.resource" count=content.resourceCount}}</span>
        <span class="bar">|</span>
        <span class="item total-questions">{{t "library.gru-partner-library-card.question" count=content.questionCount}}</span>
        <span class="bar">|</span>
        <span class="item total-rubrics">{{t "library.gru-partner-library-card.rubric" count=content.rubricCount}}</span>
      </p>
    </div>
  </div>
  <div class="panel-body"></div>
  <div class="panel-footer"></div>
</div>
