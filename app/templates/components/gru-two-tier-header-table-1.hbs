<div class=''>
  <table>
    <col>
    <tr class="second-tier">
      {{#if rowHeadersHeader}}
        <th scope="col" class="row-header fixed" {{action "updateSortCriteria" 0 -1}}>
          <span>
            {{ t 'common.name'}}
            {{ t 'common.last'}}
            {{gru-icon name='keyboard_arrow_down'}}
            {{ t 'common.first'}}
            {{gru-icon name='keyboard_arrow_up'}}
          </span>
        </th>
      {{/if}}
      {{#each firstTierHeaders as |firstTierHeader firstTierIndex|}}
        {{#each secondTierHeaders as |secondTierHeader secondTierIndex|}}
          <th scope="col" class="{{secondTierHeader.value}} hidden" {{action "updateSortCriteria" firstTierIndex secondTierIndex}}>
            <span>
              {{gru-icon name='help_outline' }}
              <div class="col-label hidden">{{secondTierHeader.label}} </div>
            </span>
          </th>
        {{/each}}
      {{/each}}
    </tr>
    {{#each sortedData as |row|}}
      <tr class="data">
        <th scope="row" class="fixed" {{action "selectRowHeader" row.id}}>
          <span>{{row.lastFirstName}}</span>
        </th>
        {{#each row.content as |content index|}}
          <td class="hidden">
            <span class="{{if content.label 'pointer'}}" title="{{content.label}}" data-toggle="tooltip" data-placement="auto">{{{content.output}}}</span>
          </td>
        {{/each}}
      </tr>
    {{/each}}
    <tr class="data avg-row">
      <th scope="row avg-row" class="fixed">
        <span></span>
      </th>
      {{#each sortedData.firstObject.content as |content index|}}
        {{#if (gt index caAverage) }}
          <td class='avg-row'>
            <div class='class-avg'>{{t 'class.analytics.performance.teacher.metricsTable.class-average'}}</div>
            <div class="{{if content.label 'pointer'}}" title="{{content.label}}" data-toggle="tooltip" data-placement="auto" style='display: inline-block;width:99%'>{{avgScore}}</div>
          </td>
        {{else}}
          <td class="hidden avg-row">
            <span class="{{if content.label 'pointer'}}" title="{{content.label}}" data-toggle="tooltip" data-placement="auto"></span>
          </td>
        {{/if}}
      {{/each}}
    </tr>
  </table>
</div>