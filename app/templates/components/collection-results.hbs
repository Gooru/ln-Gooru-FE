<div class="collection-results">
    <div class="row">
        <div class="text-center">
            <div class="results">
                {{#if collectionResults}}
                  {{#each collectionResults as |collection|}}
                    {{cards.gru-collection-card collection=collection onOpenContentPlayer="openContentPlayer"}}
                  {{/each}}
                {{else}}
                  {{partial 'partials/no-results-found'}}
                {{/if}}
            </div>
        </div>
    </div>
</div>