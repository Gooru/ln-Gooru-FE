<div class="container-fluid">
  <div class="controller info">
     <div class="class-details row">
         <div class="class-info col-md-8 col-sm-8 col-xs-12">
            <h3 class="hidden-xs">{{t "class.info.class-info"}}</h3>
            <p class="description-legend hidden-sm hidden-md hidden-lg">{{t "class.info.description"}}</p>
            <p class="description">{{class.description}}</p>
            <p class="truncate">
              <span class="info-details subject">{{t "class.info.subject"}}: {{class.subject}}</span>
              <span class="info-details grade">{{t "class.info.grade"}}: {{class.grades}}</span>
            </p>
         </div>
         <div class="info-btns col-xs-12 col-sm-3 col-md-3 col-sm-offset-1 col-md-offset-1">
            <div class="code">
                <span class="code-legend">{{t "class.info.class-code"}}</span>
                <span class="class-code">{{class.code}}</span>
            </div>
            <div class="edit-share-section col-center-block {{if isStudent 'hide' 'show'}}">
                <button class="edit-btn btn btn-primary">
                  {{t "class.info.edit-info"}}
                </button>
                <button class="share-btn btn btn-success">
                  {{t "class.info.share-class"}}
                </button>
            </div>
         </div>
     </div>
      <div class="row">
         <div class="teachers-section col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                  <h5>{{t "class.info.teachers"}} ({{class.teachers.length}})</h5>
                </div>
                <div class="invite-collaborator col-md-6 col-sm-6 col-xs-6 {{if isStudent 'hide' 'show'}}">
                    <button class="btn btn-info btn-teacher">
                      {{t "class.info.invite-collaborator"}}
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <hr>
                </div>
            </div>
             <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <ul class="teachers">
                     {{#each class.teachers as |teacher|}}
                       <li class="profile-card">
                         {{cards.gru-user-card user=teacher}}
                       </li>
                     {{/each}}
                    </ul>
                </div>
             </div>
         </div>
         <div class="students-section col-md-12 col-sm-12 col-xs-12">
             <div class="row">
                 <div class="col-md-6 col-sm-6 col-xs-6">
                     <h5>{{t "class.info.students"}} ({{students.length}})</h5>
                 </div>
                 <div class="invite-student col-md-6 col-sm-6 col-xs-6 {{if isStudent 'hide' 'show'}}">
                     <button class="btn btn-info btn-teacher">
                       {{t "class.info.invite-student"}}
                     </button>
                 </div>
             </div>
             <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12">
                      <hr>
                  </div>
             </div>
             <div class="row">
                 <div class="col-md-12 col-sm-12 col-xs-12">
                    <ul class="students">
                      {{#each students as |student|}}
                          <li class="profile-card">
                            {{cards.gru-user-card user=student}}
                          </li>
                      {{/each}}
                    </ul>
                 </div>
             </div>
         </div>
     </div>
  </div>
</div>