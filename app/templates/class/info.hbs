<div class="controller info">
   <div class="class-details row">
       <div class="col-md-9 col-sm-9 col-xs-12">
           <div class="row">
              <div class="subject col-md-5 col-sm-5 col-xs-6">
                <p class="title">{{t "class.info.subject"}}:</p>
                <p>{{class.subject}}</p>
              </div>
               <div class="grade col-md-5 col-sm-5 col-xs-6">
                   <p class="title">{{t "class.info.grade"}}:</p>
                   <p>{{class.grades}}</p>
               </div>
           </div>
           <div class="row description">
               <div class="col-md-12 col-sm-12 col-xs-12">
                   <p>
                       <span class="title">{{t "class.info.description"}}:</span>
                       {{class.description}}
                   </p>
               </div>
           </div>
       </div>
       <div class="info-btns col-md-3 col-sm-3 col-xs-12">
                <div class="edit-share-section col-center-block {{if isStudent 'hide' 'show'}}">
                    <button class="edit-btn btn btn-default">
                        Edit Class
                    </button>
                    <button class="share-btn btn btn-default">
                        Share Class
                    </button>
                </div>
              <div class="code">
                  <p>{{class.code}}</p>
              </div>
       </div>
   </div>
    <div class="row">
       <div class="teachers-section col-md-12 col-sm-12 col-xs-12">
          <div class="row">
              <div class="col-md-6 col-sm-6 col-xs-6">
                  <h3>{{t "class.info.teachers"}}</h3>
              </div>
              <div class="invite-collaborator col-md-6 col-sm-6 col-xs-6 {{if isStudent 'hide' 'show'}}">
                  <button class="btn btn-default btn-teacher">
                      Invite Colaborator
                  </button>
              </div>
          </div>
           <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                  <ul class="teachers">
                   {{#each class.teachers as |teacher|}}
                     <li class="profile-card">
                        {{gru-profile-card user=teacher}}
                     </li>
                   {{/each}}
                  </ul>
              </div>
           </div>
       </div>
       <div class="students-section col-md-12 col-sm-12 col-xs-12">
           <div class="row">
               <div class="col-md-6 col-sm-6 col-xs-6">
                   <h3>{{t "class.info.students"}}</h3>
               </div>
               <div class="invite-student col-md-6 col-sm-6 col-xs-6 {{if isStudent 'hide' 'show'}} ">
                   <button class="btn btn-default btn-teacher">
                       Invite Student
                   </button>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12 col-sm-12 col-xs-12">
                  <ul class="students">
                    {{#each students as |student|}}
                        <li class="profile-card">
                          {{gru-profile-card user=student}}
                        </li>
                    {{/each}}
                  </ul>
               </div>
           </div>
       </div>
   </div>
</div>
