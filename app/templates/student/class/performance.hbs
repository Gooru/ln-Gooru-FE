<div class="student class performance">
  <div class="filters">
    <div class="radios-container pull-left widthradiobtns">
    <div class="Classrooms-Reports">
      <div class="{{if (eq collectionType 'assessment') 'selectedButton' 'radioNormalButton'}} pull-left pointer" {{action 'selectContentType' 'assessment' preventDefault=false}}><div for="assessment-content-type" class="{{if (eq collectionType 'assessment') 'selectedButtonType' 'normalButtonType'}}">{{t 'student-landing.my-performance.assessments'}}</div></div>
      <div class="{{if (eq collectionType 'collection') 'selectedButton' 'radioNormalButton'}} pull-left pointer" {{action 'selectContentType' 'collection' preventDefault=false}}><div for="collection-content-type" class="{{if (eq collectionType 'collection') 'selectedButtonType' 'normalButtonType'}}">{{t 'student-landing.my-performance.collections'}}</div></div>
    </div>
    </div>
    <div class="performance-scale pull-left widthscale">
      {{grading-scale-legend}}
    </div>
</div>
<div class="clearfix row"></div>
<div class="clearfix row"></div>
<div class="topPadding">
   <div class="navigation pull-left">
     {{student.gru-performance-course-filter
     selectedCourse=course
     showCourse=false
     filterCriteria=filterCriteria
     onSelectUnit="selectUnit"
     onSelectLesson="selectLesson"
     onUpdateReport="updateReport"
     }}
   </div>
    <div class="content pull-left">
      {{student.class.analytics.gru-performance-table
      contentTitle=contentTitle
      metrics=metrics
      assessments=collections
      collectionPerformanceSummaryItems=collectionPerformanceSummaryItems
      onViewReport='viewReport'
      showReportColumn=true
      }}
    </div>
    </div>
</div>