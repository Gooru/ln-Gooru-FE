<div class="student performance container-fluid">
  <div class="row">
    <div class="filter-panel col-md-2 col-sm-4 col-xs-12">
      <div class="header">
        <div class="title">{{t 'student-landing.my-performance.filter'}}</div>
      </div>
      <div class="body">
        <div class="filter-buttons">
          <button class="btn btn-default course selected">
            <span>{{t 'common.course'}}</span>
          </button>
        </div>
        <div class="filter-type course">
          <span>{{t 'common.course'}}</span>
          <a class="arrow" {{action 'expandPanel' 'course'}}>
            {{#if isCourseFiltersExpanded}}
              {{gru-icon name='arrow_drop_up'}}
            {{else}}
              {{gru-icon name='arrow_drop_down'}}
            {{/if}}
          </a>
        </div>
        <div class="content-panel course {{if isCourseFiltersExpanded 'visible' 'hidden'}}">
          <div class="items">
            {{#each courses as |course|}}
              <div class="item ellipsis">
                  <input type="radio" name="courseOption"
                         checked="{{if (eq course.id courseId) 'checked'}}"
                    {{action 'selectCourse' course.id preventDefault=false}}/> {{course.title}}</div>
            {{else}}
              {{t 'common.no-content'}}
            {{/each}}
          </div>
        </div>

        <div class="filter-type unit">
          <span>{{t 'common.unit'}}</span>
          <a class="arrow" {{action 'expandPanel' 'unit'}}>
            {{#if isUnitFiltersExpanded}}
              {{gru-icon name='arrow_drop_up'}}
            {{else}}
              {{gru-icon name='arrow_drop_down'}}
            {{/if}}
          </a>
        </div>
        <div class="content-panel unit {{if isUnitFiltersExpanded 'visible' 'hidden'}}">
          <div class="items">
            {{#each units as |unit|}}
                <div class="item ellipsis">
                    <input type="radio" name="unitOption"
                           checked="{{if (eq unit.id unitId) 'checked'}}"
                      {{action 'selectUnit' unit.id preventDefault=false}}/> {{unit.title}}</div>
            {{else}}
              {{t 'common.no-content'}}
            {{/each}}
          </div>
        </div>

        <div class="filter-type lesson">
          <span>{{t 'common.lesson'}}</span>
          <a class="arrow" {{action 'expandPanel' 'lesson'}}>
            {{#if isLessonFiltersExpanded}}
              {{gru-icon name='arrow_drop_up'}}
            {{else}}
              {{gru-icon name='arrow_drop_down'}}
            {{/if}}
          </a>
        </div>
        <div class="content-panel lesson {{if isLessonFiltersExpanded 'visible' 'hidden'}}">
          <div class="items">
            {{#each lessons as |lesson|}}
                <div class="item ellipsis">
                    <input type="radio" name="lessonOption"
                           checked="{{if (eq lesson.id lessonId) 'checked'}}"
                      {{action 'selectLesson' lesson.id preventDefault=false}}/> {{lesson.title}}</div>
            {{else}}
              {{t 'common.no-content'}}
            {{/each}}
          </div>
        </div>
        <div class="actions">
          <button class="btn btn-primary update-report" {{action 'updateReport'}}>
            {{gru-icon name='trending_up'}}
            <span>{{t 'student-landing.my-performance.update-report'}}</span>
          </button>
        </div>
      </div>
    </div>

    <div class="performance-content col-md-10 col-sm-8 col-xs-12">
      <div class="panel-header">
        <h1>{{t 'student-landing.my-performance.title'}}</h1>
        <button class="btn btn-primary download">
          {{gru-icon name='file_download'}}
          <span>{{t 'common.download-print'}}</span>
        </button>
        <p>{{t 'student-landing.my-performance.primary-text'}}</p>
      </div>

      <div class="filters">
        <div class="radios-container">
            <input id="assessment-content-type" type="radio" name="contentTypeOption"
                   checked="{{if (eq collectionType 'assessment') 'checked'}}"
              {{action 'selectContentType' 'assessment' preventDefault=false}}/> <label for="assessment-content-type" >{{t 'student-landing.my-performance.assessments'}}</label>
            <input id="collection-content-type" type="radio" name="contentTypeOption"
                   checked="{{if (eq collectionType 'collection') 'checked'}}"
              {{action 'selectContentType' 'collection' preventDefault=false}}/> <label for="collection-content-type" >{{t 'student-landing.my-performance.collections'}}</label>
        </div>
        <div class="performance-scale">
          {{grading-scale-legend}}
        </div>
      </div>
      {{student.class.analytics.gru-performance-table
        contentTitle=contentTitle
        assessments=collections
        collectionPerformanceSummaryItems=collectionPerformanceSummaryItems
      }}
    </div>
  </div>
</div>