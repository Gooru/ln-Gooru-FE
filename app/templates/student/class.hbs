<div class="student class">
  <div class="header">
    <div class="first-column">
      <h1>{{class.title}}</h1>
      <div class="code">{{class.code}}</div>
      <div class="boxes">
        <div class="box completed">
        </div>
        <div class="box performance">
          {{charts.gru-bubble-chart content='80%' color=(grade-color 80)}}
          <span class="legend">{{t 'student-landing.class.performance'}}</span>
        </div>
        <div class="box improvement">
        </div>
      </div>
    </div>
    <div class="second-column">
      <div class="panel panel-default panel-primary announcements">
        <div class="panel-heading">{{t 'common.announcements'}}</div>
        <div class="panel-body">
          <div class="greeting">
            <span>{{class.greeting}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="class-navigator">
    <ul class="nav nav-tabs" role="tablist">
      <li class="active activity-list tab">
        <a href="#" role="tab" data-toggle="tab">
          <span class="lead">{{t 'student-landing.class.activity-list'}}</span>
        </a>
      </li>
      <li class="performance tab">
        <a href="#" role="tab" data-toggle="tab">
          <span class="lead">{{t 'student-landing.class.performance'}}</span>
        </a>
      </li>
      <li class="classmates tab">
        <a href="#" role="tab" data-toggle="tab">
          <span class="lead">{{t 'student-landing.class.classmates'}}</span>
        </a>
      </li>
      <li class="content-map tab">
        <a href="#" role="tab" data-toggle="tab">
          <span class="lead">{{t 'student-landing.class.content-map'}}</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="content">
    {{outlet}}
  </div>
</div>
