{{player.gru-study-header
  onToggleHeader='toggleHeader'
  classId=classId
  collection=collection
  courseId=course.id
  courseTitle=course.title
  resource=resource
  resourceSequence=resource.sequence
  breadcrumbs=breadcrumbs
  collectionUrl=collectionUrl
}}
{{#if isDone}}
  {{player.gru-player-done classId=classId}}
{{else}}
  <div class="resource-player {{if toggleState 'expanded' 'collapsed'}}">
    {{partial 'partials/qz-resource-player'}}
  </div>
{{/if}}
