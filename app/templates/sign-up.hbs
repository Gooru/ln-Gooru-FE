<div class="controller sign-up row">
  <div class="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="progress-dots">
            <span class="dot color"></span>
            <span class="dot"></span>
            <span class="dot"></span>
          </div>
          <h3>{{t "sign-up.step-1-title"}}</h3>
          <div class="description" alt="{{t "sign-up.step-1-description"}}"
               title="{{t "sign-up.step-1-description"}}">{{t "sign-up.step-1-description"}}
          </div>
          <div class="sign-in-description" alt="{{t "sign-up.sign-in-description"}}"
               title="{{t "sign-up.sign-in-description"}}">
            {{#link-to 'sign-in'}} {{t "sign-up.log-in"}} {{/link-to}}
            {{t "sign-up.log-in-description"}}
          </div>
          <div class="google-button">
            <div class="google-button-content-wrapper">
              <div class="google-button-icon">
                <div class="google-button-icon-image">
                </div>
              </div>
          <span class="google-button-content">
            <span>{{t "sign-up.google-button"}}</span>
          </span>
            </div>
          </div>
        </div>
        <div class="divider"></div>
        <div class="modal-body">
          <div class="wrapper">
            <div class="main">
              <div class="sign-up-form">
                <form id="signUpForm" {{action "next" on="submit"}}>
                  <div class="form-group username">
                    <label>
                      <span class="required">{{t "sign-up.username"}}</span>
                      {{validation.gru-input model=profile valuePath='username' }}
                    </label>
                  </div>
                  {{gru-select-date-picker wasSubmitted=didValidate}}
                  <div class="form-group firstName">
                    <label>
                      <span class="required">{{t "sign-up.firstName"}}</span>
                      {{validation.gru-input model=profile valuePath='firstName' }}
                    </label>
                  </div>
                  <div class="form-group lastName">
                    <label>
                      <span class="required">{{t "sign-up.lastName"}}</span>
                      {{validation.gru-input model=profile valuePath='lastName' }}
                    </label>
                  </div>
                  <div class="form-group email">
                    <label>
                      <span class="required">{{t "sign-up.email"}}</span>
                      {{validation.gru-input model=profile valuePath='email' }}
                    </label>
                  </div>
                  <div class="form-group">
                    <label>
                      <span class="required">{{t "sign-up.password"}}</span>
                      {{validation.gru-input model=profile valuePath='password' type='password'}}
                    </label>
                  </div>
                  <div class="form-group">
                    <label>
                      <span class="required">{{t "sign-up.rePassword"}}</span>
                      {{validation.gru-input model=profile valuePath='rePassword' type='password'}}
                    </label>
                  </div>
                  <div class="sign-up-button form-group text-center">
                    <button type="submit" class="btn btn-success submit-sign-up">{{t "common.next"}}</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
