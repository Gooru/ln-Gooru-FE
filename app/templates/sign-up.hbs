<div class="controller sign-up row">
  <div class="modal">
    <div class="modal-dialog">
      <div class="first-step">
        <div class="modal-content">
          <div class="modal-header">
            <div class="progress-dots">
              <span class="dot color"></span>
              <span class="dot"></span>
              <span class="dot"></span>
            </div>
            <h3>{{t "sign-up.step-1-title"}}</h3>
            <div class="description" alt="{{t "sign-up.step-1-description"}}"
                 title="{{t "sign-up.step-1-description"}}">{{t "sign-up.step-1-description"}}
            </div>
            <div class="sign-in-description" alt="{{t "sign-up.sign-in-description"}}"
                 title="{{t "sign-up.sign-in-description"}}">
              {{#link-to 'sign-in'}} {{t "sign-up.sign-in"}} {{/link-to}}
              {{t "sign-up.sign-in-description"}}
            </div>
            <div class="googleButton">
              <div class="googleButtonContentWrapper">
                <div class="googleButtonIcon">
                  <div class="googleButtonIconImage">
                  </div>
                </div>
            <span class="googleButtonContent">
              <span>{{t "login.googleButton"}}</span>
            </span>
              </div>
            </div>
          </div>
          <div class="divider"></div>
          <div class="modal-body">
            <div class="wrapper">
              <div class="main">
                <div class="sign-up-form">
                  <form>
                    <div class="form-group username">
                      <label>
                        <span class="required">{{t "sign-up.username"}}</span>
                        {{validation.gru-input model=user valuePath='username' }}
                      </label>
                    </div>
                    <div class="form-group birth-day-date">
                      <label>
                        <span class="required">{{t "sign-up.dateOfBirth.title"}}</span>
                        <div class="birth-months">
                          <select class="selectpicker" data-live-search="true" title="{{t "sign-up.dateOfBirth.month"}}">
                            <option value="1">{{t "sign-up.dateOfBirth.months.january"}}</option>
                            <option value="2">{{t "sign-up.dateOfBirth.months.february"}}</option>
                            <option value="3">{{t "sign-up.dateOfBirth.months.march"}}</option>
                            <option value="4">{{t "sign-up.dateOfBirth.months.april"}}</option>
                            <option value="5">{{t "sign-up.dateOfBirth.months.may"}}</option>
                            <option value="6">{{t "sign-up.dateOfBirth.months.june"}}</option>
                            <option value="7">{{t "sign-up.dateOfBirth.months.july"}}</option>
                            <option value="8">{{t "sign-up.dateOfBirth.months.august"}}</option>
                            <option value="9">{{t "sign-up.dateOfBirth.months.september"}}</option>
                            <option value="10">{{t "sign-up.dateOfBirth.months.october"}}</option>
                            <option value="11">{{t "sign-up.dateOfBirth.months.november"}}</option>
                            <option value="12">{{t "sign-up.dateOfBirth.months.december"}}</option>
                          </select>
                        </div>
                        <div class="birth-days">
                          <select class="selectpicker" data-live-search="true" title="{{t "sign-up.dateOfBirth.day"}}">
                            {{#each birthDays as |birthDay|}}
                             <option value="{{birthDay}}">{{birthDay}}</option>
                            {{/each}}
                          </select>
                        </div>
                        <div class="birth-years">
                          <select class="selectpicker" data-live-search="true" title="{{t "sign-up.dateOfBirth.year"}}">
                            {{#each birthYears as |birthYear|}}
                              <option value="{{birthYear}}">{{birthYear}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </label>
                    </div>
                    <div class="form-group firstName">
                      <label>
                        <span class="required">{{t "sign-up.firstName"}}</span>
                        {{validation.gru-input model=user valuePath='firstName' }}
                      </label>
                    </div>
                    <div class="form-group lastName">
                      <label>
                        <span class="required">{{t "sign-up.lastName"}}</span>
                        {{validation.gru-input model=user valuePath='lastName' }}
                      </label>
                    </div>
                    <div class="form-group email">
                      <label>
                        <span class="required">{{t "sign-up.email"}}</span>
                        {{validation.gru-input model=user valuePath='email' }}
                      </label>
                    </div>
                    <div class="form-group">
                      <label>
                        <span class="required">{{t "sign-up.password"}}</span>
                        {{validation.gru-input model=user valuePath='password' type='password'}}
                      </label>
                    </div>
                    <div class="form-group">
                      <label>
                        <span class="required">{{t "sign-up.rePassword"}}</span>
                        {{validation.gru-input model=user valuePath='rePassword' type='password'}}
                      </label>
                    </div>
                    <div class="sign-up-button form-group text-center">
                      <button class="btn btn-success submit-sign-in" >{{t "common.next"}}</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
