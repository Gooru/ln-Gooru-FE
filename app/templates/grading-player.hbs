<div class="teacher grading">
  <div class="roster {{if showRoster 'visible' 'hidden'}}">
    {{grading.gru-student-roster
      users=users
      onClose='closeRoster'
      fullRubric=hideResponse
      currentUserId=currentUserId
      onChangeUser='changeUser'
    }}
  </div>
  <div class="response-panel {{if hideResponse 'hide-response'}}">
    <div class="header clearfix">
      <div class="go-back-container">
        <a class="back-to" {{action 'navigateBack'}}>
          {{gru-icon name='arrow_back'}}
          {{t 'grading-player.back-to'}}
        </a>
      </div>
      {{grading.gru-roster-header
        currentResponse=currentUser.fullNameInformal
        timeSpent=currentAnswer.timeSpent
        submittedAt=currentAnswer.submittedAt
        onOpenRoster='openStudentRoster'
      }}
      {{grading.gru-task-header promptText=currentAnswer.questionText}}
    </div>
    <div class="panel panel-default question-response">
      <div class="panel-body">
        <div class="inner-text">
          {{gru-math-text text=currentAnswer.answerText}}
        </div>
      </div>
    </div>
  </div>
  {{grading.gru-rubric-panel
    rubric=rubric
    grade=currentGrade
    showFullRubric=hideResponse
  }}
</div>
