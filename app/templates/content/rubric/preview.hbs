<div class="controller content rubric preview">
  <article>
    <header>
      <div class="header-content">
        <button type="button" class="btn-back" {{action "goBack"}}>
          {{gru-icon name="keyboard_arrow_left"}}  {{t 'common.back'}}
        </button>
        <div class="heading">
          <div class="information">
            <h1 title="{{{rubric.title}}}">{{{rubric.title}}}</h1>
            <div class="details">
              <div class="type">
                <i class="rubric-icon"></i>
                <span>{{t "common.rubric"}}</span>
              </div>
              <div class="tags">
                {{taxonomy.gru-taxonomy-tag-list tags=tags tagsVisible=3}}
              </div>
            </div>
          </div>
          <div class="publisher">
            {{#if rubric.owner}}
              <span>
                {{t "common.created-by"}}
              </span>
              <img class="img-responsive" src="{{rubric.owner.avatarUrl}}">
              {{#link-to 'profile.content.courses' rubric.owner.id class="pointer" tagName="div"}}
                <span class="owner">{{rubric.owner.displayName}}</span>
              {{/link-to}}
            {{/if}}
          </div>
        </div>
      </div>
    </header>
    <div class="preview">
      <div class="panel panel-default">
        <div class="panel-body">
          <h2>{{t "common.rubric"}}</h2>
        </div>
      </div>
    </div>
  </article>
</div>