<div class="actions">
  <button class="btn btn-default btn-icon">{{gru-icon name="delete"}}</button>
  <button class="btn btn-default btn-icon">{{gru-icon name="person_add"}}</button>
  {{#if isAssessment}}
    {{#gru-share-pop-over tagName="button" type="assessment"}}
      {{gru-icon name="insert_link"}}
    {{/gru-share-pop-over}}
  {{else}}
    {{#gru-share-pop-over tagName="button" type="collection"}}
      {{gru-icon name="insert_link"}}
    {{/gru-share-pop-over}}
  {{/if}}
  <button class="btn btn-default hidden">{{t "content.collections.edit.assign-to-course"}}</button>
  {{#link-to 'player' collection.id class="btn btn-default preview" tagName="button"}}{{t "common.preview"}}{{/link-to}}
</div>
