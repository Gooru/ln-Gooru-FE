<div class="student-collection">
  {{#if isIframeMode}}
    <div class = "player-title-panel">
      <div class="back-to-collection pull-left" {{action 'closePlayer'}} data-toggle="tooltip" data-placement="bottom" title="{{t 'common.close'}}">
        <div class="nav-icon-container">
          {{gru-icon name='ic_close'}}
        </div>
      </div>
      <div class="pull-left content-title {{unless collection.isCollection 'assessment'}}">
        <div class="title-info">
          <i class="icon pull-left"></i>
          <p class="title pull-left">{{collection.title}}</p>
        </div>
      </div>
    </div>
  {{else}}
    <div class="back-button">
      <button {{action "goBack"}} class="btn btn-info back">
        <span>
          {{gru-icon name='keyboard_arrow_left'}}
          {{#if lesson}}
            {{#if isStudent}}
              {{t "common.back-to-data"}}
            {{else}}
              {{t (if backUrl "common.back-to-data" "common.back-to-course-map")}}
            {{/if}}
          {{else}}
            {{t 'common.back'}}
          {{/if}}
        </span>
      </button>
    </div>
  {{/if}}
  {{partial 'partials/student-context'}}
</div>
