<div class="controller search">
  <div class="content-navigation">
    <div class="category-menu">
      <ul class="nav nav-tabs category-options">
        {{#link-to "search.collections" tagName="li" class='collections'}}
          <a href='{{view.href}}' class="btn btn-category">
            <i class="icon"></i>
            <span>{{t "search-filter.collections"}}</span>
          </a>
        {{/link-to}}
        {{#link-to "search.assessments" tagName="li" class='assessments'}}
          <a href='{{view.href}}' class="btn btn-category">
            <i class="icon"></i>
            <span>{{t "search-filter.assessments"}}</span>
          </a>
        {{/link-to}}
        {{#link-to "search.resources" tagName="li" class='resources'}}
          <a href='{{view.href}}' class="btn btn-category">
            <i class="icon"></i>
            <span>{{t "search-filter.resources"}}</span>
          </a>
        {{/link-to}}
        {{#link-to "search.questions" tagName="li" class='questions'}}
          <a href='{{view.href}}' class="btn btn-category">
            {{gru-icon name='help_outline'}}
            <span>{{t "search-filter.questions"}}</span>
          </a>
        {{/link-to}}
      </ul>

    </div>
  </div>
  <div class="content">
    {{outlet}}
  </div>
</div>

