<div class="controller teacher class atc">
  {{#unless isShowSecondaryClass}}
  {{teacher/class/class-atc-view
    classId = classId
    isPrimaryClass = (if isMultiClassEnabled true)
    isMultiClassView = isMultiClassEnabled
    secondaryClassToBeShownList = secondaryClassToBeShownList
    onSelectSecondaryClass = "onSelectSecondaryClass"
    class = class
    course = course}}
    {{/unless}}
    {{#if isShowSecondaryClass}}
      {{teacher/class/class-atc-view
        classId = selectedSecondary.id
        onSelectSecondaryClass="onSelectSecondaryClass"
        classInfo = selectedSecondary
        onRemoveClassView = "onRemoveClassView"
        isMultiClassView = isMultiClassEnabled}}
    {{/if}}
</div>
